---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Section from "../../components/Section.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import Pike13Events from "../../components/Pike13Events.astro";

const serviceId = 270616;
---

<BaseLayout title="Pike13 Events Test" description="Debug view for Pike13 service events.">
  <main class="p13events-page">
    <Section>
      <SectionHeader>
        <h1>Pike13 Events Debug</h1>
      </SectionHeader>
      <p>This page renders Pike13 event data so we can confirm the integration is working.</p>
    </Section>

    <Pike13Events serviceId={serviceId} heading="Service 270616 Events" />
  </main>
</BaseLayout>

<style>
  .p13events-page {
    display: grid;
    gap: var(--space-2xl, 48px);
    padding-bottom: var(--space-4xl, 64px);
  }

  .p13events-page p {
    font-size: 1rem;
    line-height: 1.6;
  }
</style>
