---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import SectionHeader from '../../../components/SectionHeader.astro';
import CalloutCard from '../../../components/ui/CalloutCard.astro';
import CampTrackCard from '../../../components/ui/CampTrackCard.astro';
import {
  codingCampsHero,
  codeArcadeInfo,
  campTracks,
  slamInfo,
  campResources,
  campContact,
} from '../../../data/codingCamps';

const phoneHref = campContact.phone.replace(/[^0-9]/g, '');
---

<BaseLayout
  title="Coding Camps & Holiday SLAMS"
  description="Week-long camps, drop-in Code Arcade sessions, and holiday SLAMS accelerate Python, Java, robotics, and AI skills with League mentors."
>
  <section class="section section--surface-alt hero">
    <div class="container hero__grid">
      <div class="hero__copy">
        <p class="tag">{codingCampsHero.tag}</p>
        <h1>{codingCampsHero.title}</h1>
        <p>{codingCampsHero.description}</p>
        <div class="button-group hero__actions">
          <a class="button button--primary" href={codingCampsHero.primaryAction.href}>{codingCampsHero.primaryAction.label}</a>
          <a class="button button--secondary" href={codingCampsHero.secondaryAction.href}>{codingCampsHero.secondaryAction.label}</a>
        </div>
      </div>
      <aside class="hero__aside">
        <CalloutCard
          headingLevel={2}
          title="What Campers Gain"
          items={codingCampsHero.highlights}
          itemsClass="hero__list"
        />
      </aside>
    </div>
  </section>

  <section class="section" id="code-arcade">
    <div class="container">
      <div class="two-column">
        <div class="two-column__copy">
          <SectionHeader title={codeArcadeInfo.title} description={codeArcadeInfo.description} align="left" />
          <p class="details"><strong>Schedule:</strong> {codeArcadeInfo.schedule}</p>
          <p class="details"><strong>Price:</strong> {codeArcadeInfo.price}</p>
          <ul class="notes">
            {codeArcadeInfo.notes.map((note) => (
              <li>{note}</li>
            ))}
          </ul>
          <div class="button-group">
            <a class="button button--primary" href={codeArcadeInfo.action.href}>{codeArcadeInfo.action.label}</a>
          </div>
        </div>
        <CalloutCard class="two-column__aside emphasis" title="Drop-In Format">
          <p>
            Flexible sign-ups let students tailor each day around Python, Java, robotics, AI, or independent projects. Mentors keep
            learners challenged and help them launch something new every session.
          </p>
          <p>
            Families can mix Code Arcade mornings with afternoon SLAMS or Tech Club events to build a full-day experience.
          </p>
        </CalloutCard>
      </div>
    </div>
  </section>

  <section class="section section--surface-alt" id="tracks">
    <div class="container">
      <SectionHeader
        title="Choose Your Track"
        description="Campers rotate through themed labs or double down on one specialty with support from League mentors."
      />
      <div class="track-grid">
        {campTracks.map((track) => (
          <CampTrackCard
            class="track"
            title={track.title}
            level={track.level}
            description={track.description}
            image={track.image}
            linkHref={track.link}
            linkTarget="_blank"
            linkRel="noopener"
          />
        ))}
      </div>
    </div>
  </section>

  <section class="section" id="holiday-slams">
    <div class="container">
      <div class="two-column">
        <div class="two-column__copy">
          <SectionHeader title={slamInfo.title} description={slamInfo.description} align="left" />
          <ul class="notes">
            {slamInfo.prerequisites.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
          <div class="button-group">
            <a class="button button--primary" href={slamInfo.action.href}>{slamInfo.action.label}</a>
          </div>
        </div>
        <CalloutCard class="two-column__aside emphasis" title="Ready for Level-Ups">
          <p>
            SLAMS compress a month of curriculum into a single break week. Students leave with new projects, mentor feedback, and
            momentum for their weekly classes.
          </p>
          <p>
            Need help picking dates or confirming eligibility? Reach out and we will build a plan that fits your goals.
          </p>
        </CalloutCard>
      </div>
    </div>
  </section>

  <section class="section section--surface-alt" id="resources">
    <div class="container resource-grid">
      <CalloutCard class="resource-card" title="Prep & Study Guides">
        <ul>
          {campResources.map((resource) => (
            <li>
              <a href={resource.href} target="_blank" rel="noopener">{resource.label}</a>
            </li>
          ))}
        </ul>
      </CalloutCard>
      <CalloutCard class="contact-card" title="Plan a Custom Camp">
        <p>
          Design a private camp or troop workshop at your site, or request scholarship details. Email or call and our team will
          follow up with availability and next steps.
        </p>
        <ul>
          <li><strong>Phone:</strong> <a href={`tel:${phoneHref}`}>{campContact.phone}</a></li>
          <li><strong>Email:</strong> <a href={`mailto:${campContact.email}`}>{campContact.email}</a></li>
        </ul>
        <a class="button button--secondary" href="/about/contact/">Contact Form</a>
      </CalloutCard>
    </div>
  </section>

</BaseLayout>
