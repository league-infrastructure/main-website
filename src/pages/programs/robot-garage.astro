---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SectionHeader from '../../components/SectionHeader.astro';
import CalloutCard from '../../components/CalloutCard.astro';
import { getProgramBySlug } from '../../utils/markdown.js';

const programSlug = 'robot_garage';
const programData = getProgramBySlug(programSlug);
const heroImage = programData?.metadata?.image
  ? `/images/cards/${programData.metadata.image}`
  : '/images/cards/robot_garage.png';
const heroAlt = programData?.title ?? 'Robot Garage';
---

<BaseLayout
  title="Robot Garage"
  description="Hands-on robotics labs that combine hardware, microcontrollers, and advanced programming for committed students."
>
  <section class="section section--surface-alt hero">
    <div class="container hero__grid">
      <div class="hero__copy">
        <p class="tag">Robotics programs</p>
        <h1>Robot Garage</h1>
        <p>
          The Robot Garage is where League students design, wire, and program robots from the ground up. Teams work with
          motors, cameras, microcontrollers, and sensors to ship ambitious hardware projects while receiving mentorship
          from industry professionals.
        </p>
        <div class="button-group hero__actions">
          <a class="button button--primary" href="https://jtl.pike13.com/welcome">Become a Member</a>
          <a class="button button--secondary" href="https://www.meetup.com/the-league-tech-club/">Try a Free Tech Club Class</a>
        </div>
      </div>
      <CalloutCard
        class="hero__aside"
        headingLevel={2}
        title="Program Highlights"
        itemsClass="hero__list"
      >
        <ul>
          <li>Learn to build and program robots end to end</li>
          <li>Choose from multiple weekly sessions</li>
          <li>Ideal for intermediate and advanced students</li>
          <li>Pacific Beach and Carmel Valley locations</li>
          <li>Included with League membership</li>
        </ul>
        <figure class="hero__media">
          <img src={heroImage} alt={`${heroAlt} illustration`} loading="lazy" />
        </figure>
      </CalloutCard>
    </div>
  </section>

  <section class="section">
    <div class="container two-column">
      <div class="two-column__copy">
        <SectionHeader align="left">
          <h2>Build Real Hardware Projects</h2>
          <p>Robot Garage students combine fabrication, programming, and experimentation to construct sophisticated robots.</p>
        </SectionHeader>
        <p>
          Robot Garage students explore mechanical design, electronics, motion control, and computer vision while building custom projects. Participants wire sensors, configure microcontrollers, and program motors using platforms like Arduino, micro:bit, and Raspberry Pi.
        </p>
        <p>
          Instruction combines common lessons on foundational skills with independent project time. Beginners start with LEDs and motors. Advanced students experiment with neural networks, cameras, and industrial robotic arms.
        </p>
      </div>
      <CalloutCard class="two-column__list">
        <figure slot="media" class="side-image">
          <img
            src="/images/IMG_3003-e1742319406441.png"
            alt="Robot prototype built by students"
            loading="lazy"
          />
        </figure>
        <p class="card__body">
          Projects range from autonomous rovers and robotic arms to face-tracking cameras. Students document their work in
          GitHub and practice iterative design so they can present polished demos to robotics teams, college admissions
          offices, and potential employers.
        </p>
      </CalloutCard>
    </div>
  </section>

  <section class="section section--surface-alt" id="first">
    <div class="container">
      <SectionHeader>
        <h2>FIRST Programming Clinic</h2>
        <p>Summer 2025 programming clinics support both FIRST FRC and FTC robotics teams.</p>
      </SectionHeader>
      <div class="clinic-grid">
        <CalloutCard
          class="clinic-card"
          cta={{
            label: 'Register for the Programming Clinic',
            href: 'https://docs.google.com/forms/d/e/1FAIpQLSdHk68vyMAJehdkNO5-tY_aMcv0LdDJOoEXaoSLtciT3x0fVA/viewform?usp=dialog',
          }}
        >
          <p>
            Students sharpen their Python and Java skills, practice FIRST tooling, and experiment with advanced concepts
            such as PID control, filtering, AprilTags, and autonomous route planning. We are recruiting robotics students,
            volunteer instructors, and adult sponsors to help shape the curriculum.
          </p>
          <p>
            The FIRST Robotics program connects three pathways based on how you want to participate:
          </p>
          <ul>
            <li>Robotics students attend free Code Clinic classes focused on FIRST programming topics.</li>
            <li>Student instructors join League Labs, our internship track where teams build new lessons.</li>
            <li>Researchers dive into machine vision and AI through our summer projects program.</li>
          </ul>
          <p>
            If you are already on a FIRST team, complete the registration form so we can coordinate classes, mentors, and
            space for your season.
          </p>
        </CalloutCard>
        <CalloutCard class="clinic-card" title="Related Programs">
          <ul class="clinic-links">
            <li><a href="/programs/tech-club/code-clinic/">Code Clinic</a></li>
            <li><a href="/programs/league-labs/">League Labs</a></li>
            <li><a href="/camps/summer-2025/summer-projects/#research">AI Research Projects</a></li>
          </ul>
        </CalloutCard>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <SectionHeader>
        <h2>Schedule</h2>
        <p>Use your League membership to book Robot Garage sessions in Carmel Valley or Pacific Beach.</p>
      </SectionHeader>
      <div class="embed">
        <iframe
          src="https://snips.jtlapp.net/leaguesync/html/326658/all-5w.html"
          title="Robot Garage schedule"
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
    </div>
  </section>

  <section class="section section--surface-alt">
    <div class="container try-grid">
      <CalloutCard class="try-card">
        <div class="try-card__copy">
          <h2 class="card__title">Not Sure Yet?</h2>
          <p>
            Visit the Robot Garage by dropping into a free Tech Club meetup. Look for Soldering Clinic and Introduction to
            Motors classes on the calendar or contact us to arrange a tour.
          </p>
          <div class="button-group">
            <a class="button button--primary" href="https://www.meetup.com/the-league-tech-club/">Join the Tech Club Meetup</a>
            <a class="button button--secondary" href="/about/contact/">Contact the League</a>
          </div>
        </div>
        <figure class="try-card__media">
          <img
            src="/images/computer-robot-1.png"
            alt="Students soldering at the Tech Club"
            loading="lazy"
          />
        </figure>
      </CalloutCard>
      <CalloutCard
  class="partner-card"
  headingLevel={2}
  title="Bring the Tech Club to You"
  cta={{ label: 'Learn About Hosting', href: '/programs/tech-club/#host-tech-club', variant: 'secondary' }}
      >
        <p>
          We regularly partner with schools, companies, and libraries to host pop-up robotics and electronics clinics. Get
          in touch if you would like the League to run a session for your community.
        </p>
      </CalloutCard>
    </div>
  </section>

</BaseLayout>
