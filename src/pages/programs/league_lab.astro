---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SectionHeader from '../../components/SectionHeader.astro';
import EmbedLoader from '../../components/EmbedLoader.astro';
import CalloutCard from '../../components/CalloutCard.astro';

// Data that has iteration - moved as structures
const leagueLabsTopics = [
  'Python—introductory programming or specialty topics like web or data analysis',
  'Java—from foundational skills to advanced concepts',
  'Game development in Python or JavaScript',
  'Robotics with FIRST FTC, FRC, Arduino, micro:bit, or Raspberry Pi',
  'Artificial Intelligence—using AI tools, building models, or understanding ethics',
];

const leagueLabsSpecialPrograms = [
  {
    title: 'FIRST Robotics Focus',
    description:
      'Join a cohort dedicated to creating lessons for FIRST FTC and FRC teams. Mention your team number on the application to be matched with peers building robotics curriculum.',
  },
  {
    title: 'Science Fair to Classroom',
    description:
      'Transform your science fair project into a League class that demonstrates the computing techniques behind your research.',
  },
];

const classDevelopmentProcess = [
  'Research similar lessons for inspiration and gather references.',
  'Prototype your class, then beta test it with friends or fellow interns.',
  'Collect feedback, open tickets, and iterate on improvements.',
  'Promote the class through Tech Club channels such as Code Clinic.',
  'Teach online and in-person sessions, gathering reflections after each run.',
];

const leagueLabsBenefits = [
  'Build technical and professional skills simultaneously.',
  'Dive deeply into a favorite technology or emerging field.',
  'Earn resume-ready experience while giving back to the community.',
];

const overviewSkills = [
  'Tools like GitHub, GitHub Codespaces, and Visual Studio Code',
  'Programming fundamentals and applied problem solving',
  'Product development and human-centered design',
  'Marketing and promotion, including beta testing your class',
];

const projectExamples = {
  blurb:
    'Explore published League curriculum like the Motors Clinic or Python Games lessons to spark ideas for your own project.',
  links: [
    {
      label: 'Motors Clinic Curriculum',
      href: 'https://league-curriculum.github.io/Motors/index.html#',
    },
    {
      label: 'Python Games Lessons',
      href: 'https://github.com/league-curriculum/Python-Games/blob/master/lessons/01_Motion_and_Physics/00_Motion_and_Physics.ipynb',
    },
    {
      label: 'League Curriculum Library',
      href: 'https://curriculum.jointheleague.org/',
    },
  ],
};

const applicationSteps = [
  'Submit the League Labs internship interest form to tell us about your goals and experience.',
  'Register for an upcoming kickoff meeting to confirm the program is a good fit.',
  'Join the League Labs Google Group to stay informed about project assignments and announcements.',
];

const projectIdeas = [
  {
    title: 'Algorithms with Cards Class',
    description:
      'Help build a data structures class that uses playing cards to visualize algorithms, then implement them in Python.',
    href: 'https://www.meetup.com/the-league-code-clinic/events/307422492',
  },
  {
    title: 'Programming Merit Badge',
    description:
      'Collaborate with Scouts to run the BSA Programming Merit Badge and document the full workshop flow.',
    href: 'https://www.jointheleague.org/programs/tech-club/programming-merit-badge/',
  },
  {
    title: 'Neural Nets From Scratch',
    description:
      'Turn the NNFS book into a guided series that helps peers build neural networks from the ground up.',
    href: 'https://nnfs.io/',
  },
  {
    title: 'Micro:bit Experiments',
    description:
      'Extend the Hour of Micro:bit into multi-session projects featuring gadgets, games, and robotics.',
    href: 'https://league-curriculum.github.io/HourofMicrobit/',
  },
  {
    title: 'Python Code Challenges',
    description:
      'Curate challenges from LeetCode, HackerRank, or CodeWars and design League versions with walkthroughs.',
    href: 'https://leetcode.com/',
  },
  {
    title: 'FIRST Robotics Curriculum',
    description:
      'Create intro and advanced lessons for FTC or FRC teams covering topics like vision, CAN bus, or simulation.',
  },
];

const heroHighlights = [
  'Design and launch 90-minute classes you teach to Tech Club and Code Clinic students',
  'Collaborate with mentors to refine curriculum using feedback and product development best practices',
  'Explore advanced software projects including the code.jointheleague.org platform',
];

// Contact info
const phoneHref = '6198897571';
---

<BaseLayout
  title="League Labs Internship"
  description="Intern with the League to design new classes, teach peers, and build career-ready experience across curriculum and software projects."
>
  <section class="section section--surface-alt hero">
    <div class="container hero__grid">
      <div class="hero__copy">
        <p class="tag">High school internship</p>
        <h1>League Labs Internship</h1>
        <p>Build your college resume, explore new technologies, and contribute real curriculum that impacts League students across San Diego.</p>
        <p class="note"><strong>Timeline:</strong> League Labs Summer 2025 runs from June 1 to September 30.</p>
        <p class="status">Applications for Summer 2025 are closed, but you can register now to be notified about the Fall 2025 cohort.</p>
        <div class="button-group hero__actions">
          <a class="button button--primary" href="https://docs.google.com/forms/d/e/1FAIpQLSem_gx5qIJiHGuHKsX5h7RyCyz9IqIpSt5KYmwRjGaYdg8Z8w/viewform?usp=dialog">Join the Fall 2025 Interest List</a>
          <a class="button button--secondary" href="http://labs.jointheleague.org/">Visit the Intern Portal</a>
        </div>
      </div>
      <CalloutCard
        class="hero__aside"
        headingLevel={2}
        title="Why Join League Labs?"
        items={heroHighlights}
        itemsClass="hero__list"
      />
    </div>
  </section>

  <section class="section" id="about">
    <div class="container about-grid">
      <div class="about-grid__copy">
        <SectionHeader align="left">
          <h2>Design, Teach, and Ship Curriculum</h2>
          <p>Choose a topic you care about, build a shareable lesson, and launch it with support from League mentors.</p>
        </SectionHeader>
        <p>LEAGUE Labs is an unpaid internship for high school students who want to design new League classes and gain professional experience. Interns select a topic they care about, build a lesson plan, and teach it to peers across Tech Club or Code Clinic sessions.</p>
        <p>Advanced interns can contribute to code.jointheleague.org, the web-based IDE our team is building to deliver League Labs curriculum. That project covers Python web applications, Docker, VS Code extensions, SQL, and modern deployment workflows.</p>
      </div>
      <div class="about-grid__cards">
        <CalloutCard class="info-card" title="Skills You Will Practice">
          <ul>
            {overviewSkills.map((skill) => (
              <li>{skill}</li>
            ))}
          </ul>
        </CalloutCard>
        <CalloutCard class="info-card" title="Popular Topics">
          <ul>
            {leagueLabsTopics.map((topic) => (
              <li>{topic}</li>
            ))}
          </ul>
        </CalloutCard>
      </div>
    </div>
  </section>

  <section class="section section--surface-alt" id="special-programs">
    <div class="container">
      <SectionHeader>
        <h2>Special Focus Tracks</h2>
        <p>Shape your internship around robotics teams or science outreach by joining one of these themed cohorts.</p>
      </SectionHeader>
      <div class="special-grid">
        {leagueLabsSpecialPrograms.map((program) => (
          <CalloutCard class="special-card" title={program.title}>
            <p class="card__body">{program.description}</p>
          </CalloutCard>
        ))}
      </div>
    </div>
  </section>

  <section class="section" id="what-you-will-do">
    <div class="container two-column">
      <div class="two-column__copy">
        <SectionHeader align="left">
          <h2>What You Will Do</h2>
          <p>Interns develop new classes or contribute to our online IDE, following a full product development cycle.</p>
        </SectionHeader>
        <ol class="process">
          {classDevelopmentProcess.map((step) => (
            <li>{step}</li>
          ))}
        </ol>
      </div>
      <CalloutCard
        class="two-column__aside emphasis emphasis--subtle"
        title="Intern Benefits"
        items={leagueLabsBenefits}
        cta={{ label: 'Join the Interest List', href: 'https://docs.google.com/forms/d/e/1FAIpQLSem_gx5qIJiHGuHKsX5h7RyCyz9IqIpSt5KYmwRjGaYdg8Z8w/viewform?usp=dialog' }}
      />
    </div>
  </section>

  <section class="section section--surface-alt" id="project-examples">
    <div class="container">
      <SectionHeader>
        <h2>Project Inspiration</h2>
        <p>Review published League curriculum to see the format and depth interns aim for.</p>
      </SectionHeader>
      <div class="resource-grid">
        <p>{projectExamples.blurb}</p>
        <div class="resource-grid__links">
          <ul>
            {projectExamples.links.map((resource) => (
              <li>
                <a href={resource.href} target="_blank" rel="noopener">{resource.label}</a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="section" id="apply">
    <div class="container two-column">
      <div class="two-column__copy">
        <SectionHeader align="left">
          <h2>Application Process</h2>
          <p>Share your interests, meet the mentors, and stay connected through League Labs announcements.</p>
        </SectionHeader>
        <p class="status">Applications for Summer 2025 are currently closed. Complete the interest form to receive details about the next kickoff meetings and Fall 2025 opportunities.</p>
        <ol class="process">
          {applicationSteps.map((step) => (
            <li>{step}</li>
          ))}
        </ol>
      </div>
      <CalloutCard
        class="two-column__aside info-card"
        title="Stay in the Loop"
        cta={{ label: 'League Labs Google Group', href: 'https://groups.google.com/a/jointheleague.org/g/labs', variant: 'secondary' }}
      >
        <p>Join our Google Group for program updates and project assignments.</p>
      </CalloutCard>
    </div>
  </section>

  <section class="section section--surface-alt" id="meetings">
    <div class="container">
      <SectionHeader>
        <h2>Kickoff Meeting Schedule</h2>
        <p>RSVP for an upcoming kickoff session to confirm expectations and choose your first project.</p>
      </SectionHeader>
      <div class="embed">
        <EmbedLoader src="https://snips.jtlapp.net/leaguesync/meetups/the-league-code-clinic-high_voltage.html" title="League Labs kickoff meetings" />
      </div>
    </div>
  </section>

  <section class="section" id="project-ideas">
    <div class="container">
      <SectionHeader>
        <h2>Hot Projects</h2>
        <p>Jump into an in-progress idea or pitch your own. These initiatives need interns right now.</p>
      </SectionHeader>
      <div class="idea-grid">
        {projectIdeas.map((idea) => (
          <CalloutCard class="idea-card" title={idea.title}>
            <p class="card__body">{idea.description}</p>
            {idea.href && (
              <a class="link" href={idea.href} target="_blank" rel="noopener">Learn more</a>
            )}
          </CalloutCard>
        ))}
      </div>
    </div>
  </section>

  <section class="section section--surface-alt" id="news">
    <div class="container">
      <CalloutCard
        class="news-card"
        headingLevel={2}
        title="League Labs News"
        cta={{ label: 'Read Updates', href: 'https://www.jointheleague.org/category/league-labs/' }}
      >
        <p>Stay up to date on intern achievements and project launches by following the League Labs news feed.</p>
      </CalloutCard>
    </div>
  </section>

  <section class="section" id="contact">
    <div class="container">
      <CalloutCard
        class="contact-card"
        headingLevel={2}
        title="Questions About League Labs?"
        cta={{ label: 'Contact Form', href: '/about/contact/', variant: 'secondary' }}
      >
        <p>
          Reach out to our team to confirm eligibility, request a recommendation, or coordinate a custom project track. We are here to help you make the most of your internship.
        </p>
        <ul>
          <li><strong>Phone:</strong> <a href={`tel:${phoneHref}`}>619-889-7571</a></li>
          <li><strong>Email:</strong> <a href="mailto:eric.busboom@jointheleague.org">eric.busboom@jointheleague.org</a></li>
        </ul>
      </CalloutCard>
    </div>
  </section>
</BaseLayout>
