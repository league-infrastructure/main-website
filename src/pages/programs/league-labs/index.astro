---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import SectionHeader from '../../../components/SectionHeader.astro';
import EmbedLoader from '../../../components/EmbedLoader.astro';
import CalloutCard from '../../../components/ui/CalloutCard.astro';
import {
  leagueLabsHero,
  leagueLabsOverview,
  leagueLabsTopics,
  leagueLabsSpecialPrograms,
  classDevelopmentProcess,
  leagueLabsBenefits,
  projectExamples,
  applicationDetails,
  meetingEmbedUrl,
  projectIdeas,
  newsHighlight,
} from '../../../data/leagueLabs';
import { contactInfo } from '../../../data/techClub';

const phoneHref = contactInfo.phone.replace(/[^0-9]/g, '');
---

<BaseLayout
  title="League Labs Internship"
  description="Intern with the League to design new classes, teach peers, and build career-ready experience across curriculum and software projects."
>
  <section class="section section--surface-alt hero">
    <div class="container hero__grid">
      <div class="hero__copy">
        <p class="tag">{leagueLabsHero.tag}</p>
        <h1>{leagueLabsHero.title}</h1>
        <p>{leagueLabsHero.description}</p>
        <p class="note"><strong>Timeline:</strong> {leagueLabsHero.scheduleNote}</p>
        <p class="status">{leagueLabsHero.status}</p>
        <div class="button-group hero__actions">
          <a class="button button--primary" href={leagueLabsHero.primaryAction.href}>{leagueLabsHero.primaryAction.label}</a>
          <a class="button button--secondary" href={leagueLabsHero.secondaryAction.href}>{leagueLabsHero.secondaryAction.label}</a>
        </div>
      </div>
      <CalloutCard
        class="hero__aside"
        headingLevel={2}
        title="Why Join League Labs?"
        items={leagueLabsHero.highlights}
        itemsClass="hero__list"
      />
    </div>
  </section>

  <section class="section" id="about">
    <div class="container about-grid">
      <div class="about-grid__copy">
        <SectionHeader
          title="Design, Teach, and Ship Curriculum"
          description="Choose a topic you care about, build a shareable lesson, and launch it with support from League mentors."
          align="left"
        />
        <p>{leagueLabsOverview.summary}</p>
        <p>{leagueLabsOverview.advancedTrack}</p>
      </div>
      <div class="about-grid__cards">
        <CalloutCard class="info-card" title="Skills You Will Practice">
          <ul>
            {leagueLabsOverview.skills.map((skill) => (
              <li>{skill}</li>
            ))}
          </ul>
        </CalloutCard>
        <CalloutCard class="info-card" title="Popular Topics">
          <ul>
            {leagueLabsTopics.map((topic) => (
              <li>{topic}</li>
            ))}
          </ul>
        </CalloutCard>
      </div>
    </div>
  </section>

  <section class="section section--surface-alt" id="special-programs">
    <div class="container">
      <SectionHeader
        title="Special Focus Tracks"
        description="Shape your internship around robotics teams or science outreach by joining one of these themed cohorts."
      />
      <div class="special-grid">
        {leagueLabsSpecialPrograms.map((program) => (
          <CalloutCard class="special-card" title={program.title}>
            <p class="card__body">{program.description}</p>
          </CalloutCard>
        ))}
      </div>
    </div>
  </section>

  <section class="section" id="what-you-will-do">
    <div class="container two-column">
      <div class="two-column__copy">
        <SectionHeader
          title="What You Will Do"
          description="Interns develop new classes or contribute to our online IDE, following a full product development cycle."
          align="left"
        />
        <ol class="process">
          {classDevelopmentProcess.map((step) => (
            <li>{step}</li>
          ))}
        </ol>
      </div>
      <CalloutCard
        class="two-column__aside emphasis emphasis--subtle"
        title="Intern Benefits"
        items={leagueLabsBenefits}
        cta={{ label: 'Join the Interest List', href: leagueLabsHero.primaryAction.href }}
      />
    </div>
  </section>

  <section class="section section--surface-alt" id="project-examples">
    <div class="container">
      <SectionHeader
        title="Project Inspiration"
        description="Review published League curriculum to see the format and depth interns aim for."
      />
      <div class="resource-grid">
        <p>{projectExamples.blurb}</p>
        <div class="resource-grid__links">
          <ul>
            {projectExamples.links.map((resource) => (
              <li>
                <a href={resource.href} target="_blank" rel="noopener">{resource.label}</a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="section" id="apply">
    <div class="container two-column">
      <div class="two-column__copy">
        <SectionHeader
          title="Application Process"
          description="Share your interests, meet the mentors, and stay connected through League Labs announcements."
          align="left"
        />
        <p class="status">{applicationDetails.statusNote}</p>
        <ol class="process">
          {applicationDetails.steps.map((step) => (
            <li>{step}</li>
          ))}
        </ol>
      </div>
      <CalloutCard
        class="two-column__aside info-card"
        title="Stay in the Loop"
        cta={{ label: applicationDetails.googleGroup.label, href: applicationDetails.googleGroup.href, variant: 'secondary' }}
      >
        <p>Join our Google Group for program updates and project assignments.</p>
      </CalloutCard>
    </div>
  </section>

  <section class="section section--surface-alt" id="meetings">
    <div class="container">
      <SectionHeader
        title="Kickoff Meeting Schedule"
        description="RSVP for an upcoming kickoff session to confirm expectations and choose your first project."
      />
      <div class="embed">
        <EmbedLoader src={meetingEmbedUrl} title="League Labs kickoff meetings" />
      </div>
    </div>
  </section>

  <section class="section" id="project-ideas">
    <div class="container">
      <SectionHeader
        title="Hot Projects"
        description="Jump into an in-progress idea or pitch your own. These initiatives need interns right now."
      />
      <div class="idea-grid">
        {projectIdeas.map((idea) => (
          <CalloutCard class="idea-card" title={idea.title}>
            <p class="card__body">{idea.description}</p>
            {idea.href && (
              <a class="link" href={idea.href} target="_blank" rel="noopener">Learn more</a>
            )}
          </CalloutCard>
        ))}
      </div>
    </div>
  </section>

  <section class="section section--surface-alt" id="news">
    <div class="container">
      <CalloutCard
        class="news-card"
        headingLevel={2}
        title="League Labs News"
        cta={{ label: 'Read Updates', href: newsHighlight.href }}
      >
        <p>{newsHighlight.description}</p>
      </CalloutCard>
    </div>
  </section>

  <section class="section" id="contact">
    <div class="container">
      <CalloutCard
        class="contact-card"
        headingLevel={2}
        title="Questions About League Labs?"
        cta={{ label: 'Contact Form', href: '/about/contact/', variant: 'secondary' }}
      >
        <p>
          Reach out to our team to confirm eligibility, request a recommendation, or coordinate a custom project track. We are here to help you make the most of your internship.
        </p>
        <ul>
          <li><strong>Phone:</strong> <a href={`tel:${phoneHref}`}>{contactInfo.phone}</a></li>
          <li><strong>Email:</strong> <a href={`mailto:${contactInfo.email}`}>{contactInfo.email}</a></li>
        </ul>
      </CalloutCard>
    </div>
  </section>
</BaseLayout>
