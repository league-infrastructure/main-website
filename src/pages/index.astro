---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/HeroSection.astro";
import ProgramCard from "../components/ProgramCard.astro";
import CardBody from "../components/CardBody.astro";
import CardFooter from "../components/CardFooter.astro";
import CardGrid from "../components/CardGrid.astro";
import CalloutCard from "../components/CalloutCard.astro";
import SectionHeader from "../components/SectionHeader.astro";
import Section from "../components/Section.astro";
import Section_40_60 from "../components/Section_40_60.astro";

const moreWaysToLearn = [
  {
    title: "Code Clinic",
    description:
      "Online deep dives into emerging technologies for advanced students.",
    href: "/programs/tech-club/code-clinic/",
  },
  {
    title: "Project Clinic",
    description:
      "Personalized consulting sessions to ship your independent project.",
    href: "/programs/project-clinic/",
  },
  {
    title: "FIRST Robot Programming",
    description:
      "Free skills classes supporting FIRST FTC and FRC robotics teams.",
    href: "/programs/tech-club/robot-garage/#first",
  },
  {
    title: "League Labs",
    description:
      "Intern with the League to design future curriculum and earn job experience.",
    href: "/programs/league-labs/",
  },
  {
    title: "Summer Research",
    description:
      "Collaborate on research projects in computational science and AI.",
    href: "/camps/summer-2025/summer-projects/#research",
  },
  {
    title: "League at Work",
    description:
      "Bring League instruction to your company as an employee benefit.",
    href: "/donate/the-league-at-work/",
  },
];
---

<BaseLayout
  title="Igniting Young Minds Through Coding"
  description="The League of Amazing Programmers offers weekly coding classes, mentorship, and career preparation for students in grades 4-12."
>
  <HeroSection class="hero-gradient">
    <img
      slot="logo"
      src="/logos/wordmark-h-1200.png"
      alt="The League of Amazing Programmers"
      class="custom-hero__logo"
    />
    <h1 slot="tagline" class="custom-hero__tagline">
      Igniting Young Minds Through Coding
    </h1>
    <p slot="description">
      At The League of Amazing Programmers, we prepare kids for the science and
      technology careers of the 21st century through a multi-level program of
      weekly classes up to industry certification. We offer
      <a href="#weekly-programming-classes">weekly coding classes</a>,
      <a href="#free-classes">free Tech Club meetings</a>, and
      <a href="#more-ways-to-learn">many other ways to learn</a>.
    </p>
    <img
      slot="media"
      src="/images/cards/computer-robot.png"
      alt="Student-built robot with laptop"
      loading="lazy"
    />
  </HeroSection>

  <Section
    id="weekly-programming-classes"
    startBgcolor="var(--color-peach-strong)"
    endBgcolor="var(--color-peach-strong)"
  >
    <SectionHeader>
      <h2 class="section__title">Weekly Programming Classes</h2>
      <p class="section__description">
        Our Coding Classes are for students in grades 4-12 who are eager to
        learn programming. Classes are taught by alumni from Brown University,
        UCSD, Cornell, and more! We work closely with all students to make
        coding fun and engaging. All our classes are now available in-person or
        online â€“ you choose.
      </p>
    </SectionHeader>
    <CardGrid min-width={360}>
      <ProgramCard
        img="/images/cards/python.png"
        alt="Illustration representing Python coding"
      >
        <CardBody eyebrow="BEGINNER TO INTERMEDIATE">
          <h2 slot="title">Python Coding Classes</h2>
          <description
            >Python is the most popular programming language, and useful for
            every kind of programming, and it's the easiest to learn! Students
            learn fundamental programming concepts including variables, loops,
            conditionals, functions, and object-oriented programming through
            hands-on projects and real-world applications.</description
          >
          <ul>
            <li>Official Python certificates</li>
            <li>In-person and online cohorts</li>
            <li>Small classes with five students per teacher</li>
            <li>Interactive coding exercises and games</li>
            <li>Preparation for AP Computer Science Principles</li>
          </ul>
        </CardBody>
        <CardFooter>
          <p slot="price">$280 per month</p>
          <a
            slot="primary"
            class="button button--primary"
            href="https://jtl.pike13.com/group_classes/270616"
            target="_blank"
            rel="noreferrer">Enroll In-Person</a
          >
          <a
            slot="secondary"
            class="button button--primary"
            href="https://jtl.pike13.com/group_classes/255811"
            target="_blank"
            rel="noreferrer">Enroll Online</a
          >
          <a
            slot="learn-more"
            class="program-learn-more-link"
            href="/classes/python">Learn More</a
          >
        </CardFooter>
      </ProgramCard>
      <ProgramCard
        img="/images/cards/java.png"
        alt="Illustration representing Java development"
      >
        <CardBody eyebrow="BEGINNER TO ADVANCED">
          <h2 slot="title">Java Coding Classes</h2>
          <description
            >For students of all levels who want to learn industry-level Java
            programming. Our comprehensive 8-level curriculum takes students
            from basic syntax to advanced object-oriented programming, preparing
            them for Oracle certification and college-level computer science.</description
          >
          <ul>
            <li>Oracle-aligned curriculum</li>
            <li>Hybrid and online schedules</li>
            <li>Project-based learning across eight levels</li>
            <li>Industry-standard development tools (Eclipse, IntelliJ)</li>
            <li>Professional certification preparation</li>
            <li>
              Advanced topics: data structures, algorithms, design patterns
            </li>
          </ul>
        </CardBody>
        <CardFooter>
          <p slot="price">$280 per month</p>
          <a
            slot="primary"
            class="button button--primary"
            href="https://jtl.pike13.com/group_classes/263387"
            target="_blank"
            rel="noreferrer">Enroll In-Person</a
          >
          <a
            slot="secondary"
            class="button button--primary"
            href="https://jtl.pike13.com/group_classes/191042"
            target="_blank"
            rel="noreferrer">Enroll Online</a
          >
          <a
            slot="learn-more"
            class="program-learn-more-link"
            href="/classes/java">Learn More</a
          >
        </CardFooter>
      </ProgramCard>
    </CardGrid>
  </Section>

  <Section
    id="free-classes"
    startBgcolor="var(--color-peach-strong)"
    endBgcolor="var(--color-peach-strong)"
  >
    <SectionHeader>
      <h2>Free Classes</h2>
      <p>
        Our Tech Club program offers free introductory classes in Python, Java,
        robotics and electronics to schools and library all over San Diego
        County. For more advanced students, the Code Clinic offers online
        classes in professional programming technologies and techniques.
      </p>
    </SectionHeader>
    <CardGrid min-width={320}>
      <ProgramCard img="/images/cards/league_code.png" alt="">
        <CardBody eyebrow="BEGINNER TO INTERMEDIATE">
          <h2 slot="title">Free Tech Club</h2>
          <description
            >Learn Python, Java, AI, robotics, electronics and many other tech
            skills at our free Tech Club classes. Tech Club classes are taught
            several times a week at schools and Libraries all around San Diego
            and are designed for beginners to programming. Students explore
            various technology topics through hands-on workshops and
            collaborative projects.</description
          >
          <ul>
            <li>Multiple weekly meetups</li>
            <li>Hands-on demos and mini-projects</li>
            <li>Volunteer mentors and alumni support</li>
            <li>Arduino and Raspberry Pi workshops</li>
            <li>Introduction to artificial intelligence</li>
            <li>Robotics programming and competitions</li>
          </ul>
        </CardBody>
        <CardFooter>
          <p slot="price">Free</p>
          <a
            slot="primary"
            class="button button--primary"
            href="https://www.meetup.com/the-league-tech-club"
            target="_blank"
            rel="noreferrer">Join Tech Club</a
          >
          <a
            slot="learn-more"
            class="program-learn-more-link"
            href="/programs/tech-club/">Learn More</a
          >
        </CardFooter>
      </ProgramCard>
      <ProgramCard img="/images/cards/cpp.png" alt="">
        <CardBody eyebrow="INTERMEDIATE TO ADVANCED">
          <h2 slot="title">Code Clinic</h2>
          <description
            >Code Clinic is a free online program for advanced students to
            extend their skills beyond AP Computer Science. In these 1 hour
            virtual classes, students will get an introduction to tech topics
            like neural networks, data analysis, Docker containers, code
            refactoring, functional programming, and many others. Each session
            focuses on cutting-edge technologies used in professional software
            development.</description
          >
          <ul>
            <li>Live online masterclasses</li>
            <li>Focus on emerging technologies</li>
            <li>Led by professional engineers</li>
            <li>Advanced topics: machine learning, cloud computing</li>
            <li>Professional development practices</li>
          </ul>
        </CardBody>
        <CardFooter>
          <p slot="price">Free</p>
          <a
            slot="primary"
            class="button button--primary"
            href="https://www.jointheleague.org/programs/tech-club/code-clinic/"
            >Join Code Clinic</a
          >
          <a
            slot="learn-more"
            class="program-learn-more-link"
            href="/programs/tech-club/code-clinic/">Learn More</a
          >
        </CardFooter>
      </ProgramCard>
    </CardGrid>
  </Section>

  <Section
    id="more-ways-to-learn"
    class="section--support"
    sectionClass="home-more-ways"
    style="background: linear-gradient(180deg, var(--color-peach-strong) 0%, var(--color-primary-soft) 45%, var(--color-secondary-soft) 100%);"
  >
    <SectionHeader>
      <h2>More Ways to Learn</h2>
      <p>
        Extend your skills with specialty workshops, internships, and robotics
        programs.
      </p>
    </SectionHeader>
    <CardGrid min-width={300}>
      {
        moreWaysToLearn.map((program) => (
          <CalloutCard class="support-card" title={program.title}>
            <p>{program.description}</p>
            <a slot="footer" class="link" href={program.href}>
              Learn more
            </a>
          </CalloutCard>
        ))
      }
    </CardGrid>
  </Section>

  <Section
    id="class-curriculum"
    startBgcolor="var(--color-secondary-soft)"
    endBgcolor="var(--color-surface-alt)"
  >
    <SectionHeader>
      <h2>Our Class Curriculum</h2>
      <p>
        Explore our comprehensive curriculum designed to take students from beginners to professional programmers. All of our curriculum is openly available at <a href="https://curriculum.jointheleague.org" target="_blank" rel="noopener">curriculum.jointheleague.org</a>.
      </p>
    </SectionHeader>
    <CardGrid min-width={300}>
      <CalloutCard class="curriculum-card" title="Java Weekly Classes">
        <p>Industry-standard Java programming from basics to advanced object-oriented concepts. Perfect preparation for Oracle certification and professional development.</p>
        <a slot="footer" class="link" href="/programs/java">
          Learn More
        </a>
      </CalloutCard>
      
      <CalloutCard class="curriculum-card" title="Python Apprentice">
        <p>Master Python fundamentals with hands-on projects. Learn variables, loops, functions, and basic programming concepts in the world's most popular language.</p>
        <a slot="footer" class="link" href="/programs/python-apprentice">
          Learn More
        </a>
      </CalloutCard>
      
      <CalloutCard class="curriculum-card" title="Python Games">
        <p>Create engaging games while learning advanced Python concepts. Build arcade games, puzzles, and interactive applications using Python and Pygame.</p>
        <a slot="footer" class="link" href="/programs/python-games">
          Learn More
        </a>
      </CalloutCard>
      
      <CalloutCard class="curriculum-card" title="MakeCode Games">
        <p>Develop retro-style games using Microsoft MakeCode Arcade. Perfect introduction to game development with block-based and JavaScript programming.</p>
        <a slot="footer" class="link" href="/programs/makecode-games">
          Learn More
        </a>
      </CalloutCard>
      
      <CalloutCard class="curriculum-card" title="Robot Riot">
        <p>Complete robotics education combining programming, 3D printing, CAD design, and mechanical assembly. Build and program competition-ready robots.</p>
        <a slot="footer" class="link" href="/programs/robot-riot">
          Learn More
        </a>
      </CalloutCard>
      
      <CalloutCard class="curriculum-card" title="Robot Garage">
        <p>Hands-on robotics programming with micro:bit controllers. Learn sensors, motors, and autonomous robot behaviors through exciting challenges.</p>
        <a slot="footer" class="link" href="/programs/robot-garage">
          Learn More
        </a>
      </CalloutCard>
      
      <CalloutCard class="curriculum-card" title="League Labs">
        <p>Advanced internship program for high school students. Gain real-world experience in curriculum development and technology education.</p>
        <a slot="footer" class="link" href="/programs/league-labs">
          Learn More
        </a>
      </CalloutCard>
      
      <CalloutCard class="curriculum-card" title="Tech Arcade">
        <p>Free community coding sessions introducing students to programming through games, interactive projects, and creative technology challenges.</p>
        <a slot="footer" class="link" href="/programs/tech-arcade">
          Learn More
        </a>
      </CalloutCard>
    </CardGrid>
  </Section>

  <Section_40_60
    startBgcolor="var(--color-surface-alt)"
    endBgcolor="var(--color-surface-alt)"
  >
    <div slot="slot1" class="career__image">
      <img
        src="/images/action/girl_scouts.png"
        alt="Girl Scouts learning robotics at The League"
        loading="lazy"
      />
    </div>
    <div slot="slot2" class="career__content">
      <SectionHeader align="left">
        <h2>Preparing Youth for Careers</h2>
        <p>
          Students are prepared to enter the work force as a programmer or to
          continue their education in a college or university. We work closely
          with students to gain professional certification as a Java programmer
          and secure job opportunities at top companies. Our students have
          secured opportunities with many familiar names.
        </p>
      </SectionHeader>
      <div class="career__logos">
        <figure class="career__logo">
          <img src="/logos/google.png" alt="Google" loading="lazy" />
        </figure>
        <figure class="career__logo">
          <img src="/logos/amazon.png" alt="Amazon" loading="lazy" />
        </figure>
        <figure class="career__logo">
          <img src="/logos/microsoft.png" alt="Microsoft" loading="lazy" />
        </figure>
        <figure class="career__logo">
          <img src="/logos/sony.png" alt="Sony" loading="lazy" />
        </figure>
        <figure class="career__logo">
          <img src="/logos/intuit.png" alt="Intuit" loading="lazy" />
        </figure>
        <figure class="career__logo">
          <img
            src="/logos/playstation.png"
            alt="PlayStation"
            loading="lazy"
          />
        </figure>
      </div>
    </div>
  </Section_40_60>

  <Section
    startBgcolor="var(--color-secondary-soft)"
    endBgcolor="var(--color-peach-strong)"
  >
    <div style="text-align: center;">
      <h1>Hear From Our Community</h1>
      <div style="margin: 2rem 0;">
        <iframe
          src="https://player.vimeo.com/video/290793328?title=0&byline=0&portrait=0"
          width="640"
          height="360"
          title="Hear from our community"
          allow="autoplay; fullscreen; picture-in-picture"
          allowfullscreen></iframe>
      </div>
      <div class="testimonials">
        <blockquote>
          <p>
            The LEAGUE of Amazing Programmers have build my confidence to become
            an engineer. I've had a wonderful experience so far with the league
            classes and the extraordinary internship that changed my perspective
            in engineering.
          </p>
          <footer>
            Stephanie <span aria-hidden="true">|</span> Student
          </footer>
        </blockquote>
        <blockquote>
          <p>
            The LEAGUE of Amazing Programmers has helped me develop my software
            skills and also improve my skills in problem solving. The skills I
            learned from the league helped me lead an award winning robotics
            team in the San Diego Region.
          </p>
          <footer>
            Lucas <span aria-hidden="true">|</span> Student
          </footer>
        </blockquote>
        <blockquote>
          <p>
            I first joined The LEAGUE of Amazing Programmers in the 7th grade as
            just something my mom wanted me to do. Little did I know that it
            would become not only one of my favorite activities but would
            develop into my career choice.
          </p>
          <footer>
            R. Ramirez <span aria-hidden="true">|</span> Student
          </footer>
        </blockquote>
      </div>
    </div>
  </Section>

  <Section
    startBgcolor="var(--color-peach-strong)"
    endBgcolor="var(--color-surface-alt)"
  >
    <SectionHeader>
      <h2>Take a Peek Inside Our Classroom</h2>
    </SectionHeader>
    <div class="gallery">
      <figure class="gallery__item">
        <img
          src="/images/action/mx_workshop.png"
          alt="Students collaborating in coding workshop"
          loading="lazy"
        />
      </figure>
      <figure class="gallery__item">
        <img
          src="/images/action/forcepoint_cyber.png"
          alt="Students attending cybersecurity competition"
          loading="lazy"
        />
      </figure>
      <figure class="gallery__item">
        <img
          src="/images/action/girl_scouts.png"
          alt="Girl Scouts learning robotics at The League"
          loading="lazy"
        />
      </figure>
    </div>
  </Section>

  <Section 
      startBgcolor="var(--color-surface-alt)"
    endBgcolor="var(--color-surface-alt)"
  class="recognition">
    <SectionHeader>
      <h2>Community Recognition</h2>
      <p>
        We are proud to earn the trust of families, partners, and philanthropic
        leaders across San Diego.
      </p>
    </SectionHeader>
    <div class="recognition__logos">
      <a
        class="recognition__logo"
        href="https://greatnonprofits.org/org/league-of-amazing-programmers"
        target="_blank"
        rel="noreferrer"
      >
        <img
          src="/logos/toprated.png"
          alt="GreatNonprofits Top-Rated"
          loading="lazy"
        />
      </a>
    </div>
  </Section>

</BaseLayout>

<style>

  .custom-hero__logo {
    width: 350px;
    height: auto;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .custom-hero__content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .custom-hero__logo {
      max-width: 300px;
    }

    .custom-hero__badge {
      position: static;
      margin-top: 1rem;
      width: 100px;
    }
  }

  .hero-gradient {
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0) 0%,
      var(--color-peach-strong) 100%
    );
    margin-bottom: 0;
  }

  .hero-gradient + .section {
    margin-top: 0;
  }

  .program-learn-more-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .program-learn-more-link:hover {
    color: var(--color-primary-dark);
    text-decoration: underline;
  }

  .career__image {
    width: 100%;
  }

  .career__image img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-sm);
  }

  .career__logos {
    display: grid;
    gap: var(--space-xl);
    grid-template-columns: repeat(auto-fit, minmax(75px, 1fr));
    align-items: center;
  }

  .career__logo {
    margin: 0;
    padding: var(--space-md);
    background: var(--color-surface);
    border-radius: var(--radius-sm);
    box-shadow: var(--shadow-card);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .video__frame iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .testimonials {
    display: grid;
    gap: var(--space-xl);
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  blockquote {
    position: relative;
  }

  blockquote::before {
    content: '"';
    position: absolute;
    top: var(--space-xs);
    left: var(--space-xs);
    font-size: 48px;
    color: var(--color-secondary-tint);
  }

  blockquote p {
    margin: 0;
  }

  blockquote footer {
    display: inline-flex;
    gap: var(--space-xs);
    align-items: center;
  }

  .gallery {
    display: grid;
    gap: var(--space-xl);
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  }

  .gallery__item {
    margin: 0;
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--shadow-card);
  }

  .gallery__item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .recognition {
    display: grid;
    gap: var(--space-2xl);
    justify-items: center;
  }

  .recognition__logos {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-lg);
    align-items: center;
    justify-content: center;
  }

  .support-card .link {
    text-align: center;
    display: block;
  }


  }

  @media (max-width: 768px) {
    .home-hero {
      padding: var(--space-3xl) 0 var(--space-2xl);
    }

    .home-hero__media {
      order: -1;
    }

    .home-hero__blob {
      width: 320px;
      height: 320px;
    }

    .newsletter {
      justify-content: center;
      text-align: center;
    }

    .newsletter__copy p {
      margin-inline: auto;
    }
  }
</style>
