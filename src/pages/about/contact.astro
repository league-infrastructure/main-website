---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Social links (5 items - keep as array)
const socialLinks = [
  { label: 'Facebook', href: 'https://www.facebook.com/LeagueOfAmazingProgrammers' },
  { label: 'Twitter', href: 'https://twitter.com/LEAGUEofAmazing' },
  { label: 'Instagram', href: 'https://www.instagram.com/theleagueofamazingprogrammers/' },
  { label: 'YouTube', href: 'https://www.youtube.com/channel/UCkUULukaHTW8ljTXKXXGE5A' },
  { label: 'LinkedIn', href: 'https://www.linkedin.com/company/the-league-of-amazing-programmers' }
];

// Main navigation links (6 items - keep as array)
const mainNavigation = [
  { label: 'About', href: '/about/' },
  { label: 'Programs', href: '/programs/' },
  { label: 'Curriculum', href: 'https://curriculum.jointheleague.org/', external: true },
  { label: 'News', href: '/news/' },
  { label: 'Policies', href: '/about/policies/' },
  { label: 'Supporters', href: '/donate/supporters/' }
];
---

<BaseLayout title="Contact" description="Get in touch with The League of Amazing Programmers for general inquiries, partnerships, or program questions.">
  <section class="section">
    <div class="container contact">
      <div class="contact__intro">
        <h1>Contact Us</h1>
        <p>
          We would love to hear from you. Reach out with questions about our programs, donations, or partnership opportunities and the team will connect you to the right person.
        </p>
      </div>
      <div class="contact__grid">
        <article class="card">
          <h2>Visit &amp; Call</h2>
          <p>
            12625 High Bluff Drive #113, San Diego, CA 92130<br />
            <a href="https://goo.gl/maps/GUdss2BayCqGmDCLA" rel="noreferrer">Get directions</a>
          </p>
          <p>
            <strong>Phone:</strong> <a href="tel:18582840481">(858) 284-0481</a><br />
            <strong>Email:</strong> <a href="mailto:info@jointheleague.org">info@jointheleague.org</a>
          </p>
        </article>
        <article class="card">
          <h2>Quick Links</h2>
          <ul class="list-reset contact__links">
            {mainNavigation.map((item) => (
              <li>
                <a href={item.href} target={item.external ? '_blank' : undefined} rel={item.external ? 'noreferrer' : undefined}>
                  {item.label}
                </a>
              </li>
            ))}
            <li><a href="/donate/volunteer/">Volunteer with The League</a></li>
            <li><a href="/donate/create-a-fundraiser/">Create a fundraiser</a></li>
          </ul>
        </article>
        <article class="card">
          <h2>Follow The League</h2>
          <ul class="list-reset contact__links">
            {socialLinks.map((item) => (
              <li>
                <a href={item.href} target="_blank" rel="noreferrer">{item.label}</a>
              </li>
            ))}
          </ul>
        </article>
      </div>
      <div class="contact__cta card">
        <h2>Send Us a Message</h2>
        <p>
          Email us at <a href="mailto:info@jointheleague.org">info@jointheleague.org</a> with your name, the best way to reach you, and how we can help. A team member will respond within two business days.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact {
    display: grid;
    gap: var(--space-3xl);
  }

  .contact__intro {
    max-width: 720px;
  }

  .contact__grid {
    display: grid;
    gap: var(--space-xl);
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .contact__links {
    display: grid;
    gap: var(--space-xs);
  }

  .contact__cta {
    max-width: 720px;
  }
</style>
