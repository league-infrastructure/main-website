---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import HeroSection from '../../../components/ui/HeroSection.astro';
import SectionHeader from '../../../components/SectionHeader.astro';
import CalloutCard from '../../../components/ui/CalloutCard.astro';
import { volunteerHero, volunteerRoles, volunteerSteps, volunteerFaq } from '../../../data/donate';
---

<BaseLayout
  title="Volunteer"
  description="Join The League of Amazing Programmers as a volunteer mentor, event supporter, or project coach and inspire the next generation of coders."
>
  <HeroSection
    surface="alt"
    tag={volunteerHero.tag}
    title={volunteerHero.title}
    description={volunteerHero.description}
    details={volunteerHero.details}
    actions={volunteerHero.actions}
  />

  <section class="section">
    <div class="container">
      <SectionHeader align="left">
        <eyebrow>Volunteer Roles</eyebrow>
        <h2>Find the Right Fit</h2>
        <p>We provide training, curriculum, and ongoing support so you can focus on encouraging students.</p>
      </SectionHeader>
      <div class="volunteer-grid">
        {volunteerRoles.map((role) => (
          <CalloutCard title={role.title}>
            <p>{role.description}</p>
            <ul class="card__list">
              {role.items.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </CalloutCard>
        ))}
      </div>
    </div>
  </section>

  <section class="section section--surface-alt">
    <div class="container">
      <SectionHeader align="left">
        <eyebrow>Next Steps</eyebrow>
        <h2>How to Get Started</h2>
        <p>It only takes a few simple steps to begin volunteering. We will guide you through the entire process.</p>
      </SectionHeader>
      <ol class="steps-list">
        {volunteerSteps.map((step) => (
          <li>
            <p>{step}</p>
          </li>
        ))}
      </ol>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <SectionHeader align="left">
        <eyebrow>FAQ</eyebrow>
        <h2>Volunteer Questions</h2>
        <p>Reach out if you have additional questions about availability, logistics, or skill requirements.</p>
      </SectionHeader>
      <div class="faq-grid">
        {volunteerFaq.map((item) => (
          <CalloutCard title={item.question}>
            <p>{item.answer}</p>
          </CalloutCard>
        ))}
      </div>
    </div>
  </section>

  <section class="section section--surface-alt">
    <div class="container">
      <CalloutCard
        class="volunteer-cta"
        title="Bring The League to Your Company or School"
        cta={{ label: 'Contact Us', href: 'mailto:info@jointheleague.org', variant: 'secondary' }}
      >
        <p>
          Host a volunteer day, schedule an info session, or invite League mentors to your campus. We will coordinate an experience that matches your community.
        </p>
      </CalloutCard>
    </div>
  </section>
</BaseLayout>
