---
import type { GetStaticPathsResult } from "astro";
import ClassLayout from "../../layouts/ClassLayout.astro";
import HeroSection from "../../components/HeroSection.astro";
import Section from "../../components/Section.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import ButtonGroup from "../../components/ButtonGroup.astro";
import { marked } from "marked";
import { getClassesData, getCategoriesData } from "../../utils/markdown.js";

interface ClassEntry {
  title: string;
  blurb?: string;
  description?: string;
  shortDescription?: string;
  content?: string;
  meta?: {
    slug?: string;
    image?: string;
    level?: string;
    topics?: string[];
    group?: string;
  };
  slug?: string;
  image?: string;
  level?: string;
  topics?: string[];
  group?: string;
}

interface RouteProps {
  classData: ClassEntry;
  categoryData?: Record<string, unknown>;
}

type CategoryButton = { label?: string; url?: string; type?: string };

export async function getStaticPaths(): Promise<GetStaticPathsResult> {
  const classes = getClassesData();
  const categories = getCategoriesData();
  return classes
    .map((entry) => {
      const slug = entry.meta?.slug ?? entry.slug;
      if (!slug) {
        return undefined;
      }
      const groupSlug = entry.meta?.group ?? entry.group;
      const categoryData = groupSlug
        ? categories.find((category) => (category.meta?.slug ?? category.slug) === groupSlug)
        : undefined;
      return {
        params: { slug: slug.replace(/_/g, "-") },
        props: { classData: entry, categoryData },
      };
    })
    .filter(Boolean) as GetStaticPathsResult;
}

const { classData, categoryData } = Astro.props as unknown as RouteProps;

const classSlug = classData.meta?.slug ?? classData.slug;

if (!classData || !classSlug) {
  throw new Error("Class data not found for requested slug");
}

const heroImageSource = classData.meta?.image ?? classData.image;
const heroImage = heroImageSource
  ? `/images/cards/${heroImageSource}`
  : "/images/cards/computer-robot.png";
const heroAlt = classData.title ?? "Class hero";
const descriptionText =
  classData.description || classData.blurb || classData.shortDescription || "";
const descriptionParagraphs = descriptionText
  .split(/\n\s*\n/)
  .map((paragraph) => paragraph.trim())
  .filter((paragraph) => paragraph.length > 0);
const topics = classData.meta?.topics ?? classData.topics ?? [];
const level = classData.meta?.level ?? classData.level;
const categoryRecord = (categoryData ?? {}) as Record<string, any>;
const enrollContent = typeof categoryRecord.enroll === "string" ? categoryRecord.enroll.trim() : "";
const categoryButtons = Array.isArray(categoryRecord.buttons)
  ? (categoryRecord.buttons as CategoryButton[])
  : Array.isArray(categoryRecord.meta?.buttons)
    ? (categoryRecord.meta.buttons as CategoryButton[])
    : [];
const validButtons = categoryButtons.filter((button) => button?.label && button?.url);
const hasEnrollSection = Boolean(enrollContent) || validButtons.length > 0;
const hasContent = Boolean(classData.content && classData.content.trim().length > 0);
const renderedContent = hasContent ? await marked.parse(classData.content ?? "") : undefined;
---

<ClassLayout
  title={classData.title}
  description={classData.blurb ?? classData.description}
>
  <HeroSection slot="hero" class="program-hero">
    <h1 slot="tagline">{classData.title}</h1>
    {(classData.blurb ?? classData.shortDescription) && (
      <p slot="description">{classData.blurb ?? classData.shortDescription}</p>
    )}
    <div slot="media" class="program-hero__media">
      <img src={heroImage} alt={`${heroAlt} illustration`} loading="eager" />
    </div>
  </HeroSection>

  <Section startBgcolor="var(--color-surface)" endBgcolor="var(--color-peach)">
    <SectionHeader>
      <h2>Course Overview</h2>
    </SectionHeader>

    <div class="class-content">
      <div class="class-description">
        {renderedContent ? (
          <div class="class-description__body" set:html={renderedContent} />
        ) : descriptionParagraphs.length > 0 ? (
          descriptionParagraphs.map((paragraph) => <p>{paragraph}</p>)
        ) : (
          <p>Course information will be available soon.</p>
        )}
      </div>

      {(level || topics.length > 0) && (
        <aside class="class-sidebar">
          {level && (
            <div class="class-detail">
              <span class="class-detail__label">Level</span>
              <span class="class-detail__value">{level}</span>
            </div>
          )}

          {topics.length > 0 && (
            <div class="class-detail">
              <span class="class-detail__label">Topics</span>
              <ul class="class-topic-list">
                {topics.map((topic) => (
                  <li>{topic}</li>
                ))}
              </ul>
            </div>
          )}
        </aside>
      )}
    </div>
  </Section>

  {hasEnrollSection && (
    <Section startBgcolor="var(--color-surface-alt)" endBgcolor="var(--color-primary-soft)">
      <SectionHeader>
        <h2>How to Enroll</h2>
      </SectionHeader>

      <div class="class-enroll">
        {enrollContent && <div class="class-enroll__text" set:html={enrollContent} />}
        {validButtons.length > 0 && (
          <ButtonGroup
            class="class-enroll__buttons"
            actions={validButtons.map((button) => {
              const isExternal = button.url ? /^https?:/i.test(button.url) : false;
              return {
                label: button.label ?? "Enroll",
                href: button.url ?? "#",
                variant: "primary",
                target: isExternal ? "_blank" : undefined,
                rel: isExternal ? "noopener noreferrer" : undefined,
              };
            })}
          />
        )}
      </div>
    </Section>
  )}
</ClassLayout>

<style>
  .class-content {
    display: grid;
    gap: var(--space-lg);
    grid-template-columns: minmax(0, 1fr);
  }

  .class-description {
    display: grid;
    gap: var(--space-sm);
  }

  .class-sidebar {
    display: grid;
    gap: var(--space-md);
    padding: var(--space-md);
    background: var(--color-surface-alt);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
  }

  .class-detail {
    display: grid;
    gap: var(--space-xs);
  }

  .class-detail__label {
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 0.75rem;
    color: var(--color-muted);
  }

  .class-detail__value {
    font-size: 1rem;
    color: var(--color-text);
  }

  .class-topic-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: var(--space-xs);
  }

  .class-topic-list li {
    display: inline-flex;
    align-items: center;
    justify-content: flex-start;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    background-color: rgba(93, 95, 239, 0.12);
    color: var(--color-text);
    font-size: 0.875rem;
    width: fit-content;
  }

  @media (min-width: 960px) {
    .class-content {
      grid-template-columns: minmax(0, 2fr) minmax(0, 1fr);
      gap: var(--space-xl);
    }

    .class-sidebar {
      padding: var(--space-lg);
      gap: var(--space-lg);
    }
  }

  .class-enroll {
    display: grid;
    gap: var(--space-lg);
    text-align: center;
  }

  .class-enroll__text {
    font-size: 1.05rem;
    line-height: 1.6;
    color: var(--color-body);
  }

  .class-enroll__buttons {
    justify-content: center;
  }
</style>