---
import ClassLayout from "../../layouts/ClassLayout.astro";
import HeroSection from "../../components/HeroSection.astro";
import Section from "../../components/Section.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import { getClassBySlug } from "../../utils/markdown.js";

const classSlug = "python_orbitlab";
const classData = getClassBySlug(classSlug);
const heroImage = classData?.metadata?.image
  ? `/images/cards/${classData.metadata.image}`
  : "/images/cards/orbit-lab.png";
const heroAlt = classData?.title ?? "Python OrbitLab";
---

<ClassLayout
  title="Python OrbitLab"
  description="Build solar system simulations to learn orbital mechanics and scientific computing."
>
  <HeroSection slot="hero" class="program-hero">
    <h1 slot="tagline">Python OrbitLab</h1>
    <p slot="description">
      Build solar system simulations to learn orbital mechanics and scientific computing.
    </p>
    <div slot="media" class="program-hero__media">
      <img src={heroImage} alt={`${heroAlt} illustration`} loading="eager" />
    </div>
  </HeroSection>

  <Section startBgcolor="var(--color-surface)" endBgcolor="var(--color-peach)">
    <SectionHeader>
      <h2>Course Overview</h2>
    </SectionHeader>
    <div class="container">
      <p>
        Python OrbitLab introduces students to computational science through the
        fascinating topic of orbital mechanics. Students program simulations of planets,
        moons, and satellites, learning how gravity shapes the motion of celestial
        bodies. The course teaches numerical integration, vector mathematics, and
        physics simulation while developing a deep understanding of how our solar system
        works. Students create visualizations of their simulations and explore what-if
        scenarios, like adding extra planets or changing gravitational constants. This
        course demonstrates how programming is used in real scientific research and
        space exploration, connecting coding skills to STEM education in a highly
        engaging way.
      </p>
    </div>
  </Section>
</ClassLayout>