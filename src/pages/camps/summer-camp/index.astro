---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import SectionHeader from '../../../components/SectionHeader.astro';
import CalloutCard from '../../../components/CalloutCard.astro';
import CampSessionCard from '../../../components/CampSessionCard.astro';
import { campResources, campContact } from '../../../data/codingCamps';
import { summer2024Hero, featuredCamps, campTips, partnershipHighlight } from '../../../data/summer2024';

const primaryHighlights = featuredCamps.filter((camp) =>
  ['AI Camp (with Think Machine)', 'All-Day Tech Discovery Camp', 'Half-Day Tech Discovery Camp'].includes(camp.title)
);
const builderTracks = featuredCamps.filter((camp) =>
  ['Intro to Python Camp', 'Intro to Java Camp', 'Unity Game Development', 'Minecraft Modding', 'Computer Hardware Camp'].includes(
    camp.title
  )
);
const phoneHref = campContact.phone.replace(/[^0-9]/g, '');
---

<BaseLayout
  title="Summer Coding Camps"
  description="Summer camps at The League blend coding, robotics, drones, and creative technology projects for grades 5â€“12."
>
  <section class="section section--surface-alt hero">
    <div class="container hero__grid">
      <div class="hero__copy">
        <p class="tag">{summer2024Hero.tag}</p>
        <h1>Plan Your League Summer</h1>
        <p>
          Mix and match week-long camps, half-day experiences, and afternoon intensives. Whether your student wants to explore
          technology for the first time or dive deep into AI, robotics, or game development, the League has a summer track ready for
          them.
        </p>
        <div class="button-group hero__actions">
          <a class="button button--primary" href={summer2024Hero.primaryAction.href}>Browse Camp Catalog</a>
          <a class="button button--secondary" href={summer2024Hero.secondaryAction.href}>Request Scholarships</a>
        </div>
      </div>
      <CalloutCard
        class="hero__aside"
        headingLevel={2}
        title="Why Families Pick The League"
        items={summer2024Hero.highlights}
        itemsClass="hero__list"
      />
    </div>
  </section>

  <section class="section" id="signature-weeks">
    <div class="container">
      <SectionHeader>
        <h2>Signature Experiences</h2>
        <p>These camps sell out fast and set the tone for the rest of the summer. Secure your seat early.</p>
      </SectionHeader>
      <div class="camp-grid">
        {primaryHighlights.map((camp) => (
          <CampSessionCard
            class="camp"
            level={camp.level}
            title={camp.title}
            summary={camp.summary}
            schedule={camp.schedule}
            details={[
              { label: 'Location', value: camp.location },
              { label: 'Tuition', value: camp.price },
            ]}
            cta={{ label: camp.action.label, href: camp.action.href }}
          />
        ))}
      </div>
    </div>
  </section>

  <section class="section section--surface-alt" id="build-tracks">
    <div class="container">
      <SectionHeader>
        <h2>Skill-Building Tracks</h2>
        <p>Pair morning fundamentals with afternoon electives to design the perfect progression.</p>
      </SectionHeader>
      <div class="camp-grid">
        {builderTracks.map((camp) => (
          <CampSessionCard
            class="camp"
            level={camp.level}
            title={camp.title}
            summary={camp.summary}
            schedule={camp.schedule}
            details={[
              { label: 'Location', value: camp.location },
              { label: 'Tuition', value: camp.price },
            ]}
            cta={{ label: camp.action.label, href: camp.action.href, variant: 'secondary' }}
          />
        ))}
      </div>
    </div>
  </section>

  <section class="section" id="day-in-life">
    <div class="container two-column">
      <div class="two-column__copy">
        <SectionHeader align="left">
          <h2>A Day at Camp</h2>
          <p>Every session balances instruction, creativity, collaboration, and time to regroup with mentors.</p>
        </SectionHeader>
        <ul class="tips">
          {campTips.map((tip) => (
            <li>{tip}</li>
          ))}
        </ul>
      </div>
      <CalloutCard class="two-column__aside emphasis" title={partnershipHighlight.title}>
        <p>{partnershipHighlight.description}</p>
        <a class="link" href={partnershipHighlight.href} target="_blank" rel="noopener">{partnershipHighlight.linkLabel}</a>
      </CalloutCard>
    </div>
  </section>

  <section class="section section--surface-alt" id="resources">
    <div class="container resource-grid">
      <CalloutCard class="resource-card" title="Prep & Study Guides">
        <ul>
          {campResources.map((resource) => (
            <li>
              <a href={resource.href} target="_blank" rel="noopener">{resource.label}</a>
            </li>
          ))}
        </ul>
      </CalloutCard>
      <CalloutCard
        class="contact-card"
        title="Plan a Custom Camp"
        cta={{ label: 'Contact Form', href: '/about/contact/', variant: 'secondary' }}
      >
        <p>
          Want an on-site experience for your troop or company? Need help building the perfect week-by-week plan? Email or call and our
          team will help.
        </p>
        <ul>
          <li><strong>Phone:</strong> <a href={`tel:${phoneHref}`}>{campContact.phone}</a></li>
          <li><strong>Email:</strong> <a href={`mailto:${campContact.email}`}>{campContact.email}</a></li>
        </ul>
      </CalloutCard>
    </div>
  </section>
</BaseLayout>

