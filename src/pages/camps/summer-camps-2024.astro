---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import SectionHeader from '../../../components/SectionHeader.astro';
import CalloutCard from '../../../components/CalloutCard.astro';
import CampSessionCard from '../../../components/CampSessionCard.astro';
import HeroSection from '../../../components/HeroSection.astro';

const phoneHref = '6198897571';




---

<BaseLayout
  title="Summer Camps 2024"
  description="Browse 2024 League camps including Tech Discovery, AI, Minecraft modding, Unity game design, and more."
>
  <HeroSection
    surface="alt"
    tag="Summer Camps 2024"
    title="Summer Camps at The League"
    description="Week-long intensives, Tech Discovery adventures, Minecraft modding, Unity game design, and AI explorations led by experienced League instructors."
    actions={[
      {
        label: "View All 2024 Camps",
        href: "https://jtl.pike13.com/categories/93521",
        variant: "primary"
      },
      {
        label: "Request Scholarship Info",
        href: "mailto:eric.busboom@jointheleague.org",
        variant: "secondary"
      }
    ]}
    aside={{
      title: "Why Families Pick The League",
      items: [
        'Camps for grades 5–12 with beginner-friendly and advanced options',
        'Hands-on projects across coding, robotics, drones, and digital creativity',
        'Small-group instruction plus fun counselor-led activity breaks',
      ]
    }}
  />

  <section class="section" id="camps">
    <div class="container">
      <SectionHeader>
        <h2>2024 Camp Catalog</h2>
        <p>Choose the schedule and topic that fits your student. Every camp below links directly to Pike13 registration.</p>
      </SectionHeader>
      <div class="camp-grid">
        {[].map((camp: any) => (
          <CampSessionCard
            class="camp"
            level={camp.level}
            title={camp.title}
            summary={camp.summary}
            schedule={camp.schedule}
            details={[
              { label: 'Location', value: camp.location },
              { label: 'Tuition', value: camp.price },
            ]}
            cta={{ label: camp.action.label, href: camp.action.href }}
          />
        ))}
      </div>
    </div>
  </section>

  <section class="section section--surface-alt" id="tips">
    <div class="container two-column">
      <div class="two-column__copy">
        <SectionHeader align="left">
          <h2>What to Expect</h2>
          <p>League camps combine skill building with time to explore, collaborate, and have fun.</p>
        </SectionHeader>
        <ul class="tips">
          <li>Arrive 15 minutes early for check-in and project setup each morning.</li>
          <li>Bring a water bottle, snacks, and any personal devices if you prefer your own setup.</li>
          <li>Projects are designed to be taken home—we will help you transfer files to a USB drive on the final day.</li>
        </ul>
      </div>
      <CalloutCard class="two-column__aside emphasis" title="Powered by Think Machine">
        <p>Our AI camps feature curriculum and mentors from Think Machine, helping students understand how modern AI tools are created and applied.</p>
        <a class="link" href="https://thinkmachine.io/" target="_blank" rel="noopener">Visit Think Machine</a>
      </CalloutCard>
    </div>
  </section>

  <section class="section" id="resources">
    <div class="container resource-grid">
      <CalloutCard class="resource-card" title="Prep & Study Guides">
        <ul>
          <li>
            <a href="http://www.usscouts.org/mb/worksheets/programming.pdf" target="_blank" rel="noopener">Programming Merit Badge Workbook</a>
          </li>
          <li>
            <a href="https://league-curriculum.github.io/Python-Introduction/" target="_blank" rel="noopener">Python Introduction Curriculum</a>
          </li>
          <li>
            <a href="https://league-curriculum.github.io/HourofMicrobit/" target="_blank" rel="noopener">Hour of Micro:bit Curriculum</a>
          </li>
        </ul>
      </CalloutCard>
      <CalloutCard
        class="contact-card"
        title="Plan a Custom Camp"
        cta={{ label: 'Contact Form', href: '/about/contact/', variant: 'secondary' }}
      >
        <p>
          Design a private camp, request scholarship support, or reserve a block of seats for your troop. Email or call and our team
          will follow up with availability and next steps.
        </p>
        <ul>
          <li><strong>Phone:</strong> <a href={`tel:${phoneHref}`}>619-889-7571</a></li>
          <li><strong>Email:</strong> <a href="mailto:eric.busboom@jointheleague.org">eric.busboom@jointheleague.org</a></li>
        </ul>
      </CalloutCard>
    </div>
  </section>

</BaseLayout>
