---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import SectionHeader from '../../../components/SectionHeader.astro';
import CalloutCard from '../../../components/ui/CalloutCard.astro';
import CampSessionCard from '../../../components/ui/CampSessionCard.astro';
import { campResources, campContact } from '../../../data/codingCamps';
import { summer2024Hero, featuredCamps, campTips, partnershipHighlight } from '../../../data/summer2024';

const phoneHref = campContact.phone.replace(/[^0-9]/g, '');
---

<BaseLayout
  title="Summer Camps 2024"
  description="Browse 2024 League camps including Tech Discovery, AI, Minecraft modding, Unity game design, and more."
>
  <section class="section section--surface-alt hero">
    <div class="container hero__grid">
      <div class="hero__copy">
        <p class="tag">{summer2024Hero.tag}</p>
        <h1>{summer2024Hero.title}</h1>
        <p>{summer2024Hero.description}</p>
        <div class="button-group hero__actions">
          <a class="button button--primary" href={summer2024Hero.primaryAction.href}>{summer2024Hero.primaryAction.label}</a>
          <a class="button button--secondary" href={summer2024Hero.secondaryAction.href}>{summer2024Hero.secondaryAction.label}</a>
        </div>
      </div>
      <CalloutCard
        class="hero__aside"
        headingLevel={2}
        title="Why Families Pick The League"
        items={summer2024Hero.highlights}
        itemsClass="hero__list"
      />
    </div>
  </section>

  <section class="section" id="camps">
    <div class="container">
      <SectionHeader>
        <h2>2024 Camp Catalog</h2>
        <p>Choose the schedule and topic that fits your student. Every camp below links directly to Pike13 registration.</p>
      </SectionHeader>
      <div class="camp-grid">
        {featuredCamps.map((camp) => (
          <CampSessionCard
            class="camp"
            level={camp.level}
            title={camp.title}
            summary={camp.summary}
            schedule={camp.schedule}
            details={[
              { label: 'Location', value: camp.location },
              { label: 'Tuition', value: camp.price },
            ]}
            cta={{ label: camp.action.label, href: camp.action.href }}
          />
        ))}
      </div>
    </div>
  </section>

  <section class="section section--surface-alt" id="tips">
    <div class="container two-column">
      <div class="two-column__copy">
        <SectionHeader align="left">
          <h2>What to Expect</h2>
          <p>League camps combine skill building with time to explore, collaborate, and have fun.</p>
        </SectionHeader>
        <ul class="tips">
          {campTips.map((tip) => (
            <li>{tip}</li>
          ))}
        </ul>
      </div>
      <CalloutCard class="two-column__aside emphasis" title={partnershipHighlight.title}>
        <p>{partnershipHighlight.description}</p>
        <a class="link" href={partnershipHighlight.href} target="_blank" rel="noopener">{partnershipHighlight.linkLabel}</a>
      </CalloutCard>
    </div>
  </section>

  <section class="section" id="resources">
    <div class="container resource-grid">
      <CalloutCard class="resource-card" title="Prep & Study Guides">
        <ul>
          {campResources.map((resource) => (
            <li>
              <a href={resource.href} target="_blank" rel="noopener">{resource.label}</a>
            </li>
          ))}
        </ul>
      </CalloutCard>
      <CalloutCard
        class="contact-card"
        title="Plan a Custom Camp"
        cta={{ label: 'Contact Form', href: '/about/contact/', variant: 'secondary' }}
      >
        <p>
          Design a private camp, request scholarship support, or reserve a block of seats for your troop. Email or call and our team
          will follow up with availability and next steps.
        </p>
        <ul>
          <li><strong>Phone:</strong> <a href={`tel:${phoneHref}`}>{campContact.phone}</a></li>
          <li><strong>Email:</strong> <a href={`mailto:${campContact.email}`}>{campContact.email}</a></li>
        </ul>
      </CalloutCard>
    </div>
  </section>

</BaseLayout>
