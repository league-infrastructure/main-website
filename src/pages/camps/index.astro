---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SectionHeader from '../../components/SectionHeader.astro';
import CalloutCard from '../../components/CalloutCard.astro';
import CampTrackCard from '../../components/CampTrackCard.astro';

const phoneHref = '6198897571';

const codingCampsHero = {
  tag: 'Camps & Slams',
  title: 'Java, Python, AI and Tech Discovery Camps',
  description:
    'Week-long camps and daily drop-in sessions help students explore Python, Java, AI, robotics, microcontrollers, and game design with League mentors on site in Carmel Valley.',
  highlights: [
    'Beginner-friendly sessions for grades 5 through 12 in person and online',
    'Hands-on projects in AI, robotics, microcontrollers, and web game development',
    'Small group instruction with experienced instructors and volunteer mentors',
  ],
  primaryAction: {
    label: 'Book a Coding Camp',
    href: 'https://jtl.pike13.com/categories/93521',
  },
  secondaryAction: {
    label: 'Reserve a Holiday SLAM',
    href: 'https://jtl.pike13.com/categories/78358',
  },
};

const codeArcadeInfo = {
  title: 'Summer 2025 Code Arcade',
  description:
    'Drop in for self-paced half-day sessions where students follow their interests across programming, robotics, microcontrollers, and AI. Mentors help every camper plan and ship projects that match their skills.',
  schedule: 'June 1 – August 8, 2025 • Weekdays 9:00 AM – 1:00 PM • Select weekend afternoons',
  price: '$79 per session • Carmel Valley Campus',
  action: {
    label: 'Enroll in Code Arcade',
    href: 'https://jtl.pike13.com/group_classes/341456',
  },
  notes: [
    'Explore Python or Java, build robots with Micro:bit, Arduino, or Raspberry Pi, experiment with AI, or launch an independent project.',
    'Projects adjust to every camper — mix and match topics throughout the week or focus on a single track.',
  ],
};

const campTracks = [
  {
    title: 'AI Camp',
    level: 'Beginner to advanced',
    description:
      'Build and train models for image recognition, language processing, and prediction games using Python libraries like Scikit-learn.',
    image: {
      src: '/images/2024/06/IMG_3021.jpeg',
      alt: 'AI camp student training machine learning models',
    },
    link: 'https://jtl.pike13.com/group_classes/335329',
  },
  {
    title: 'Web Games',
    level: 'Beginner to intermediate',
    description:
      'Code interactive games in the browser using HTML, CSS, and JavaScript. Deploy projects online and challenge friends.',
    image: {
      src: '/images/2024/06/IMG_3014.jpeg',
      alt: 'Student working on a web-based game',
    },
  },
  {
    title: 'Handheld Console Games',
    level: 'Intermediate to advanced',
    description:
      'Design original arcade-style games in Java that run on real handheld gaming hardware like the Arduboy.',
    image: {
      src: '/images/2024/06/IMG_3016.jpeg',
      alt: 'Students programming handheld gaming console',
    },
  },
  {
    title: 'Robotics Lab',
    level: 'Beginner to intermediate',
    description:
      'Program robots with cameras, sensors, and movement using Python and Java. Build mazes, line-followers, and obstacle courses.',
    image: {
      src: '/images/2024/06/IMG_3023.jpeg',
      alt: 'Student programming a robot in the lab',
    },
  },
  {
    title: 'Microcontrollers',
    level: 'Beginner to intermediate',
    description:
      'Wire circuits and code Micro:bit and Arduino controllers to create LED displays, sound machines, and IoT projects.',
    image: {
      src: '/images/2024/03/cutebot-1.png',
      alt: 'Microcontroller programming with LED displays',
    },
  },
  {
    title: 'Invent Your Own Project',
    level: 'All levels',
    description:
      'Work with coaches to scope and prototype any technical idea—from music generators to IoT devices—and leave with a plan to continue at home.',
    image: {
      src: '/images/2024/06/IMG_3003-e1742319406441.png',
      alt: 'Student collaborating on a custom coding project',
    },
  },
  {
    title: 'Python Foundations',
    level: 'Beginner to advanced',
    description:
      'Master loops, functions, and data structures while building visualizations, automations, and games in the world\'s most popular language.',
    image: {
      src: '/images/python.png',
      alt: 'Python logo illustration',
    },
  },
  {
    title: 'Java Foundations',
    level: 'Beginner to advanced',
    description:
      'Learn the language of AP Computer Science and FIRST Robotics with professional tooling such as VS Code, GitHub, and IntelliJ.',
    image: {
      src: '/images/java.png',
      alt: 'Java logo illustration',
    },
  },
];

const slamInfo = {
  title: 'Holiday SLAMS',
  description:
    'SLAMS let current League students accelerate progress by attending daily guided sessions during school breaks. Mentors oversee curriculum work, answer questions, and help students accomplish a full month of learning in a single week.',
  prerequisites: [
    'Open to active League students enrolled in Levels 0 through 6',
    'Designed for learners continuing their weekly classes or preparing for level-ups',
    'Available during winter and spring breaks with morning and afternoon cohorts',
  ],
  action: {
    label: 'Book a SLAM',
    href: 'https://jtl.pike13.com/categories/78358',
  },
};
---

<BaseLayout
  title="Coding Camps & Holiday SLAMS"
  description="Week-long camps, drop-in Code Arcade sessions, and holiday SLAMS accelerate Python, Java, robotics, and AI skills with League mentors."
>
  <section class="section section--surface-alt hero">
    <div class="container hero__grid">
      <div class="hero__copy">
        <p class="tag">{codingCampsHero.tag}</p>
        <h1>{codingCampsHero.title}</h1>
        <p>{codingCampsHero.description}</p>
        <div class="button-group hero__actions">
          <a class="button button--primary" href={codingCampsHero.primaryAction.href}>{codingCampsHero.primaryAction.label}</a>
          <a class="button button--secondary" href={codingCampsHero.secondaryAction.href}>{codingCampsHero.secondaryAction.label}</a>
        </div>
      </div>
      <aside class="hero__aside">
        <CalloutCard
          headingLevel={2}
          title="What Campers Gain"
          items={codingCampsHero.highlights}
          itemsClass="hero__list"
        />
      </aside>
    </div>
  </section>

  <section class="section" id="code-arcade">
    <div class="container">
      <div class="two-column">
        <div class="two-column__copy">
          <SectionHeader align="left">
            <h2>{codeArcadeInfo.title}</h2>
            <p>{codeArcadeInfo.description}</p>
          </SectionHeader>
          <p class="details"><strong>Schedule:</strong> {codeArcadeInfo.schedule}</p>
          <p class="details"><strong>Price:</strong> {codeArcadeInfo.price}</p>
          <ul class="notes">
            {codeArcadeInfo.notes.map((note) => (
              <li>{note}</li>
            ))}
          </ul>
          <div class="button-group">
            <a class="button button--primary" href={codeArcadeInfo.action.href}>{codeArcadeInfo.action.label}</a>
          </div>
        </div>
        <CalloutCard class="two-column__aside emphasis" title="Drop-In Format">
          <p>
            Flexible sign-ups let students tailor each day around Python, Java, robotics, AI, or independent projects. Mentors keep
            learners challenged and help them launch something new every session.
          </p>
          <p>
            Families can mix Code Arcade mornings with afternoon SLAMS or Tech Club events to build a full-day experience.
          </p>
        </CalloutCard>
      </div>
    </div>
  </section>

  <section class="section section--surface-alt" id="tracks">
    <div class="container">
      <SectionHeader>
        <h2>Choose Your Track</h2>
        <p>Campers rotate through themed labs or double down on one specialty with support from League mentors.</p>
      </SectionHeader>
      <div class="track-grid">
        {campTracks.map((track) => (
          <CampTrackCard
            class="track"
            title={track.title}
            level={track.level}
            description={track.description}
            image={track.image}
            linkHref={track.link}
            linkTarget="_blank"
            linkRel="noopener"
          />
        ))}
      </div>
    </div>
  </section>

  <section class="section" id="holiday-slams">
    <div class="container">
      <div class="two-column">
        <div class="two-column__copy">
          <SectionHeader align="left">
            <h2>{slamInfo.title}</h2>
            <p>{slamInfo.description}</p>
          </SectionHeader>
          <ul class="notes">
            {slamInfo.prerequisites.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
          <div class="button-group">
            <a class="button button--primary" href={slamInfo.action.href}>{slamInfo.action.label}</a>
          </div>
        </div>
        <CalloutCard class="two-column__aside emphasis" title="Ready for Level-Ups">
          <p>
            SLAMS compress a month of curriculum into a single break week. Students leave with new projects, mentor feedback, and
            momentum for their weekly classes.
          </p>
          <p>
            Need help picking dates or confirming eligibility? Reach out and we will build a plan that fits your goals.
          </p>
        </CalloutCard>
      </div>
    </div>
  </section>

  <section class="section section--surface-alt" id="resources">
    <div class="container resource-grid">
      <CalloutCard class="resource-card" title="Prep & Study Guides">
        <ul>
          <li>
            <a href="http://www.usscouts.org/mb/worksheets/programming.pdf" target="_blank" rel="noopener">Programming Merit Badge Workbook</a>
          </li>
          <li>
            <a href="https://league-curriculum.github.io/Python-Introduction/" target="_blank" rel="noopener">Python Introduction Curriculum</a>
          </li>
          <li>
            <a href="https://league-curriculum.github.io/HourofMicrobit/" target="_blank" rel="noopener">Hour of Micro:bit Curriculum</a>
          </li>
        </ul>
      </CalloutCard>
      <CalloutCard class="contact-card" title="Plan a Custom Camp">
        <p>
          Design a private camp or troop workshop at your site, or request scholarship details. Email or call and our team will
          follow up with availability and next steps.
        </p>
        <ul>
          <li><strong>Phone:</strong> <a href={`tel:${phoneHref}`}>619-889-7571</a></li>
          <li><strong>Email:</strong> <a href="mailto:eric.busboom@jointheleague.org">eric.busboom@jointheleague.org</a></li>
        </ul>
        <a class="button button--secondary" href="/about/contact/">Contact Form</a>
      </CalloutCard>
    </div>
  </section>

</BaseLayout>
