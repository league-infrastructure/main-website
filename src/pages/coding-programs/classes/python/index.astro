---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import SectionHeader from '../../../../components/SectionHeader.astro';
import PikeWidget from '../../../../components/PikeWidget.astro';
import CalloutCard from '../../../../components/ui/CalloutCard.astro';
import '../../../../../styles/pages/coding-programs/base.css';
import '../../../../../styles/pages/coding-programs/classes/track-detail.css';

const heroHighlights = [
  'Python is the most popular programming language',
  'One class per week',
  'Meets in Carmel Valley',
  'Beginner to advanced cohorts',
  '$280 per month or $70 per class',
];

const address = '12625 High Bluff Dr #113, San Diego, CA 92130';
---

<BaseLayout
  title="Python Programming"
  description="Weekly Python classes in Carmel Valley and online that introduce middle and high school students to professional coding."
>
  <section class="section section--surface-alt hero">
    <div class="container hero__grid">
      <div class="hero__copy">
        <p class="tag">Python programming</p>
        <h1>Weekly Python Classes in Carmel Valley</h1>
        <p>
          Python is a versatile, beginner-friendly language that powers web development, data science, machine
          learning, automation, and scientific research. Students learn core concepts quickly thanks to Python's simple
          syntax while building projects that mirror professional work.
        </p>
        <p>
          From university research labs to companies like Google, Netflix, and NASA, Python is the language of choice
          for solving complex problems. Our curriculum keeps students challenged with authentic projects and extensive
          practice.
        </p>
        <div class="button-group hero__actions">
          <a class="button button--primary" href="https://jtl.pike13.com/group_classes/270616">Enroll In Person</a>
          <a class="button button--secondary" href="https://jtl.pike13.com/group_classes/255811">View Online Schedule</a>
        </div>
      </div>
      <aside class="hero__aside">
        <CalloutCard
          class="highlight-card"
          headingLevel={2}
          title="Why Students Start with Python"
          items={heroHighlights}
          itemsClass="highlight-card__list"
        >
          <a slot="footer" class="link" href="/coding-programs/classes/python-vs-java/">Compare Python and Java</a>
        </CalloutCard>
      </aside>
    </div>
  </section>

  <section class="section">
    <div class="container schedule-grid">
      <div>
        <SectionHeader title="Weekly Schedule" align="left" />
        <p class="schedule-grid__intro">
          Python classes meet once per week. Register for a monthly membership or pay per class, then schedule the
          weekly sessions that fit your calendar. Review our
          <a href="https://www.jointheleague.org/about/enroll/">enrollment guide</a> for policies on rescheduling and
          make-up classes.
        </p>
        <PikeWidget elementId="python-schedule" serviceIds={[270616]} locationIds={[22675]} />
      </div>
      <aside class="schedule-aside">
        <CalloutCard
          class="try-card"
          title="Try a Class"
          cta={{
            label: 'Join the Tech Club',
            href: 'https://www.meetup.com/the-league-tech-club',
            variant: 'primary',
          }}
        >
          <p class="card__body">
            Create a Pike13 account to receive a Beta Test pass you can use for a complimentary introductory class.
            You can also drop into the weekly LEAGUE Tech Club meetups for free Python and Java workshops.
          </p>
        </CalloutCard>
        <CalloutCard class="map-card" title="Carmel Valley Classroom">
          <p class="card__body">{address}</p>
          <iframe
            title="Carmel Valley Classroom"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3347.998260066406!2d-117.24212868713121!3d32.94748027348285!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80dc089e19a7250d%3A0x2d1205c0f125f801!2s12625%20High%20Bluff%20Dr%2C%20San%20Diego%2C%20CA%2092130!5e0!3m2!1sen!2sus!4v1734721995347!5m2!1sen!2sus"
            referrerpolicy="no-referrer-when-downgrade"
            loading="lazy"
            allowfullscreen
          ></iframe>
        </CalloutCard>
      </aside>
    </div>
  </section>
</BaseLayout>
