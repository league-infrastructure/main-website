---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'section'> {}

const { class: className, ...rest } = Astro.props as Props & { class?: string };

const classes = ['custom-hero'];
if (className) {
  classes.push(className);
}
---

<section class:list={classes} {...rest}>
  <div class="container">
    <div class="custom-hero__content">
      <div class="custom-hero__left">
        <slot name="logo" />
        <slot name="tagline" />
        <slot name="description" />
        <slot />
      </div>
      <div class="custom-hero__right">
        <slot name="image" />
      </div>
    </div>
  </div>
</section>