---
import SectionHeader from '../SectionHeader.astro';
import { careerPrep } from '../../data/home';

const { title, description, logos } = careerPrep;
---

<section class="section section--tint">
  <div class="container career">
    <SectionHeader title={title} description={description} align="left" />
    <div class="career__logos">
      {logos.map((logo) => (
        <figure class="career__logo">
          <img src={logo.src} alt={logo.name} loading="lazy" />
        </figure>
      ))}
    </div>
  </div>
</section>

<style>
  .career {
    display: grid;
    gap: var(--space-2xl);
  }

  .career__logos {
    display: grid;
    gap: var(--space-xl);
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    align-items: center;
  }

  .career__logo {
    margin: 0;
    padding: var(--space-md);
    background: #ffffff;
    border-radius: var(--radius-sm);
    box-shadow: var(--shadow-card);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 96px;
  }

  .career__logo img {
    max-width: 120px;
    height: auto;
    filter: grayscale(0.2);
  }
</style>
