---
import { primaryCta } from '../../data/home';

const { title, description, primary, secondary } = primaryCta;
---

<section class="section cta">
  <div class="container cta__inner">
    <div>
      <h2 class="cta__title">{title}</h2>
      <p class="cta__description">{description}</p>
    </div>
    <div class="button-group">
      <a class="button button--primary" href={primary.href}>{primary.label}</a>
      <a class="button button--secondary" href={secondary.href} target="_blank" rel="noreferrer">
        {secondary.label}
      </a>
    </div>
  </div>
</section>

<style>
  .cta {
    background: var(--color-primary);
    color: #ffffff;
  }

  .cta__inner {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xl);
    align-items: center;
    justify-content: space-between;
  }

  .cta__title {
    margin: 0 0 var(--space-sm) 0;
    font-size: clamp(28px, 4vw, 36px);
  }

  .cta__description {
    margin: 0;
    color: rgba(255, 255, 255, 0.88);
  }

  .cta .button--secondary {
    background: transparent;
    color: #ffffff;
    border-color: #ffffff;
  }

  .cta .button--secondary:hover,
  .cta .button--secondary:focus {
    background: rgba(255, 255, 255, 0.18);
  }
</style>
