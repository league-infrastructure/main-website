---
import SectionHeader from '../SectionHeader.astro';
import { testimonials } from '../../data/home';
---

<section class="section">
  <div class="container">
    <SectionHeader title="Voices from The League" />
    <div class="testimonials">
      {testimonials.map((item) => (
        <blockquote>
          <p>{item.quote}</p>
          <footer>
            {item.author} <span aria-hidden="true">|</span> {item.role}
          </footer>
        </blockquote>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials {
    display: grid;
    gap: var(--space-xl);
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  blockquote {
    position: relative;
  }

  blockquote::before {
    content: 'â€œ';
    position: absolute;
    top: var(--space-xs);
    left: var(--space-xs);
    font-size: 48px;
    color: rgba(93, 95, 239, 0.2);
  }

  blockquote p {
    margin: 0;
  }

  blockquote footer {
    display: inline-flex;
    gap: var(--space-xs);
    align-items: center;
  }
</style>
