---
import SectionHeader from '../../SectionHeader.astro';
import ProfileCard from '../../ProfileCard.astro';
import { boardMembers } from '../../../data/about';
---

<section class="section section--tint">
  <div class="container">
    <SectionHeader title="Board of Directors" description="Leaders from technology, education, and civic organizations provide strategic direction, governance, and support for our mission." />
    <div class="profiles">
      {boardMembers.map((person) => (
        <ProfileCard person={person} />
      ))}
    </div>
  </div>
</section>

<style>
  .profiles {
    display: grid;
    gap: var(--space-xl);
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  }
</style>
