---
import SectionHeader from '../../SectionHeader.astro';
import ProfileCard from '../../ProfileCard.astro';
import { boardMembers } from '../../../data/about';
---

<section class="section section--tint">
  <div class="container">
    <SectionHeader>
      <h2>Board of Directors</h2>
      <p>Leaders from technology, education, and civic organizations provide strategic direction, governance, and support for our mission.</p>
    </SectionHeader>
    <div class="profiles">
      {boardMembers.map((person) => (
        <ProfileCard person={person} variant="surface" />
      ))}
    </div>
  </div>
</section>
