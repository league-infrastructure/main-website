---
import SectionHeader from '../../SectionHeader.astro';
import { impactHighlights } from '../../../data/about';
---

<section class="section impact">
  <div class="container">
    <SectionHeader title="Impact Highlights" description="From awareness to career readiness, we pair real-world curriculum with mentorship so students can translate coding skills into futures they love." />
    <div class="impact__grid">
      {impactHighlights.map((item) => (
        <article class="card impact__card">
          <h3>{item.title}</h3>
          <p>{item.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>
