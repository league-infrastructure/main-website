---
import SectionHeader from '../../SectionHeader.astro';
import ProfileCard from '../../ProfileCard.astro';
import { staffTeam } from '../../../data/about';
---

<section class="section">
  <div class="container">
    <SectionHeader>
      <h2>Our Staff & Teachers</h2>
      <p>Experienced educators and industry professionals guide students through every level, offering mentorship, certification prep, and project coaching.</p>
    </SectionHeader>
    <div class="profiles">
      {staffTeam.map((person) => (
        <ProfileCard person={person} />
      ))}
    </div>
  </div>
</section>
