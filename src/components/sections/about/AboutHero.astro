---
import { aboutHero } from '../../../data/about';

const { title, description, emphasis, image } = aboutHero;
---

<section class="section about-hero">
  <div class="container about-hero__inner">
    <div class="about-hero__content">
      <span class="tag">About</span>
      <h1>{title}</h1>
      <p class="lead">{description}</p>
      <p>{emphasis}</p>
    </div>
    <figure class="about-hero__media">
      <span class="about-hero__blob" aria-hidden="true"></span>
      <img src={image.src} alt={image.alt} loading="lazy" />
    </figure>
  </div>
</section>

<style>
  .about-hero {
    background: var(--color-hero-gradient);
  }

  .about-hero__inner {
    display: grid;
    gap: var(--space-3xl);
    align-items: center;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .about-hero__content {
    display: grid;
    gap: var(--space-lg);
  }

  h1 {
    margin: 0;
    font-size: clamp(34px, 5vw, 52px);
    color: var(--color-text);
  }

  .lead {
    margin: 0;
    font-size: 20px;
    font-weight: 500;
  }

  .about-hero__media {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0;
  }

  .about-hero__blob {
    position: absolute;
    width: 360px;
    height: 360px;
    background: radial-gradient(circle at 30% 30%, rgba(93, 95, 239, 0.2), transparent 60%);
    border-radius: 50%;
    transform: translateY(12%);
    z-index: -1;
  }

  img {
    width: min(100%, 420px);
  }

  @media (max-width: 768px) {
    .about-hero__media {
      order: -1;
    }

    .about-hero__blob {
      width: 280px;
      height: 280px;
    }
  }
</style>
