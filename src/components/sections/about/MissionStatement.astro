---
import SectionHeader from '../../SectionHeader.astro';
import { missionStatement } from '../../../data/about';

const { title, body } = missionStatement;
---

<section class="section section--tint mission">
  <div class="container mission__inner">
    <SectionHeader title={title} />
    <p>{body}</p>
  </div>
</section>

<style>
  .mission__inner {
    display: grid;
    gap: var(--space-xl);
    text-align: center;
    color: #ffffff;
  }

  .mission {
    background: linear-gradient(135deg, rgba(93, 95, 239, 0.88), rgba(243, 113, 33, 0.88));
    color: #ffffff;
  }

  .mission p {
    margin: 0 auto;
    max-width: 760px;
    font-size: 20px;
    line-height: 1.8;
  }

  .mission .section__eyebrow,
  .mission .section__title,
  .mission .section__description {
    color: #ffffff;
  }
</style>
