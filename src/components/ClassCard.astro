---
export interface Props {
  img: string;
  alt: string;
  slug: string;
  title: string;
  level?: string;
  description: string;
}

const { img, alt, slug, title, level, description } = Astro.props;
const urlSlug = slug.replace(/_/g, "-");
---

<div class="class-card" id={`class-${slug}`}>
  <div class="class-card__image">
    <a href={`/classes/${urlSlug}`} class="class-card__image-link">
      <img src={img} alt={alt} />
    </a>
  </div>
  <div class="class-card__content">
    <div class="class-card__header">
      <h3 class="class-card__title">
        <a href={`/classes/${urlSlug}`} class="class-card__title-link">
          {title}
        </a>
      </h3>
    </div>
    <p class="class-card__description">{description}</p>
    <div class="class-card__footer">
      <a href={`/classes/${urlSlug}`} class="class-card__learn-more">
        Learn more â†’
      </a>
      {level && (
        <span class="class-card__level">{level}</span>
      )}
    </div>
  </div>
</div>

<style>
  .class-card {
    display: flex;
    background: white;
    border-radius: 0.75rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    overflow: hidden;
    transition: all 0.3s ease;
    margin-bottom: 1.5rem;
    height: 170px;
  }

  .class-card:hover {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    transform: translateY(-2px);
  }

  .class-card__image {
    flex-shrink: 0;
    width: 300px;
    height: 170px;
    overflow: hidden;
  }

  .class-card__image-link {
    display: block;
    width: 100%;
    height: 100%;
  }

  .class-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .class-card__content {
    flex: 1;
    padding: 0.625rem 0.75rem;
    display: grid;
    grid-template-rows: auto 1fr auto;
    gap: 0.5rem;
    height: 100%;
    container-type: inline-size;
  }

  .class-card__header {
    display: block;
    margin-bottom: 0.125rem;
  }

  .class-card__title {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.3;
    flex: 1;
  }

  .class-card__title-link {
    text-decoration: none;
    color: var(--color-text, #1f2937);
    transition: color 0.2s ease;
  }

  .class-card__title-link:hover {
    color: var(--color-primary, #3b82f6);
  }

  .class-card__description {
    margin: 0;
    color: var(--color-text-muted, #6b7280);
    line-height: 1.5;
    font-size: clamp(0.75rem, 0.7rem + 0.45cqw, 0.95rem);
    overflow: hidden;
  }

  .class-card__footer {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 0.5rem;
  }

  .class-card__learn-more {
    text-decoration: none;
    color: var(--color-primary, #3b82f6);
    font-weight: 600;
    font-size: 0.85rem;
    transition: color 0.2s ease;
  }

  .class-card__learn-more:hover {
    color: var(--color-primary-dark, #2563eb);
  }

  .class-card__level {
    display: inline-block;
    padding: 0.2rem 0.6rem;
    border-radius: 9999px;
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: capitalize;
    background-color: var(--color-surface-alt, #f3f4f6);
    color: var(--color-text-muted, #6b7280);
    white-space: nowrap;
    margin-left: auto;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .class-card {
      flex-direction: column;
      height: auto;
    }

    .class-card__image {
      width: 100%;
      height: 170px;
    }

    .class-card__header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .class-card__level {
      align-self: flex-start;
    }
  }

  @container (max-width: 420px) {
    .class-card__description {
      font-size: clamp(0.7rem, 0.65rem + 0.6cqw, 0.9rem);
    }
  }
</style>