---
import { utilityLinks, mainNavigation, navCtas } from '../data/navigation';
import { siteSettings } from '../data/siteSettings';
---

<header class="site-header">
  <div class="site-header__top">
    <div class="container site-header__top-inner">
      <span class="site-header__tagline" aria-hidden="true"></span>
      <nav aria-label="Utility">
        <ul class="list-reset site-header__utility-list">
          {utilityLinks.map((link) => {
            let iconClass = '';
            if (link.href.includes('tel:')) {
              iconClass = 'fa-phone-alt fas';
            } else if (link.label.includes('Location')) {
              iconClass = 'fa-map-marker-alt fas';
            } else if (link.label.includes('Client Portal')) {
              iconClass = 'fa-user-graduate fas';
            }
            return (
              <li>
                <a href={link.href}>
                  {iconClass && <i class={`${iconClass} utility-icon`} aria-hidden="true"></i>}
                  <span>{link.label}</span>
                </a>
              </li>
            );
          })}
        </ul>
      </nav>
    </div>
  </div>
  <div class="container site-header__main">
    <a class="site-header__logo" href="/">
      <img
        src="/logos/flag-girl.png"
        alt={`${siteSettings.name} logo`}

      />
    </a>
    <nav aria-label="Main navigation" class="site-header__nav">
      <ul class="list-reset site-header__nav-list">
        {mainNavigation.map((item) => (
          <li>
            <a href={item.href} target={item.external ? '_blank' : undefined} rel={item.external ? 'noreferrer' : undefined}>
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    <div class="site-header__actions">
      {navCtas.map((cta) => (
        <a class={`button ${cta.label === 'Donate' ? 'button--primary' : 'button--secondary'}`} href={cta.href}>
          {cta.label}
        </a>
      ))}
    </div>
  </div>
</header>

<style>
  .site-header__top {
    background: var(--color-surface-alt);
    font-size: 14px;
    color: var(--color-muted);
  }

  .site-header__top-inner {
    display: flex;
    gap: var(--space-md);
    align-items: center;
    justify-content: space-between;
    padding-block: var(--space-sm);
  }

  .site-header__tagline {
    font-weight: 500;
    color: var(--color-primary);
  }

  .site-header__utility-list {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .site-header__utility-list a {
    color: var(--color-body);
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.2s ease;
  }

  .site-header__utility-list a:hover {
    color: var(--color-primary);
  }

  .utility-icon {
    font-size: 0.875rem;
  }

  .site-header__main {
    display: flex;
    align-items: center;
    gap: var(--space-xl);
    padding-block: var(--space-lg);
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
  }

  .site-header__logo {
    display: inline-flex;
    align-items: center;
    color: var(--color-text);
    text-decoration: none;
  }

  .site-header__logo img {
    display: block;
    height: 100px;
    width: auto;
  }

  .site-header__nav {
    flex: 1;
  }

  .site-header__nav-list {
    display: flex;
    gap: var(--space-lg);
    flex-wrap: wrap;
  }

  .site-header__nav-list a {
    color: var(--color-text);
    font-weight: 500;
  }

  .site-header__actions {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  @media (max-width: 980px) {
    .site-header__main {
      flex-direction: column;
      align-items: stretch;
      gap: var(--space-md);
    }

    .site-header__actions {
      justify-content: center;
    }

    .site-header__nav-list {
      justify-content: center;
    }
  }
</style>
