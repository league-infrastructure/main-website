---
interface Props {
  align?: 'left' | 'center';
}

const { align = 'center' } = Astro.props as Props;
---

<header class={`section__header section__header--${align}`}>
  <slot />
</header>

<style>
  .section__header {
    margin-bottom: var(--space-2xl);
    text-align: center;
    font-size: calc(1rem * 1.3);
  }

  .section__header ::slotted(.section__eyebrow) {
    color: var(--color-primary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 14px;
    margin-bottom: var(--space-xs);
  }

  .section__header ::slotted(.section__title) {
    margin: 0 0 var(--space-md) 0;
    color: var(--color-text);
    font-size: clamp(28px, 4vw, 36px);
    line-height: 1.25;
  }

  .section__header ::slotted(.section__description) {
    margin: 0;
    max-width: 720px;
    margin-inline: auto;
  }

  .section__header--left {
    text-align: left;
  }

  .section__header--left ::slotted(.section__description) {
    margin-inline: 0;
  }
</style>
