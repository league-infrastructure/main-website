---
import type { TeamMember } from '../data/about';

interface Props {
  person: TeamMember;
  variant?: 'peach' | 'surface';
}

const { person, variant = 'peach' } = Astro.props as Props;
---

<article class:list={[
  'profile',
  variant !== 'peach' && `profile--${variant}`
]}
>
  <div class="profile__image" role="presentation">
    <img src={person.image.src} alt={person.image.alt} loading="lazy" />
  </div>
  <div class="profile__body">
    <h3>{person.name}</h3>
    <p>{person.role}</p>
    {(person.email || person.link) && (
      <div class="profile__meta">
        {person.email && <a href={`mailto:${person.email}`}>Email</a>}
        {person.link && <a href={person.link} target="_blank" rel="noreferrer">Learn more</a>}
      </div>
    )}
  </div>
</article>
