---
import type { TeamMember } from '../data/about';

interface Props {
  person: TeamMember;
}

const { person } = Astro.props as Props;
---

<article class="profile">
  <div class="profile__image" role="presentation">
    <img src={person.image.src} alt={person.image.alt} loading="lazy" />
  </div>
  <div class="profile__body">
    <h3>{person.name}</h3>
    <p>{person.role}</p>
    {(person.email || person.link) && (
      <div class="profile__meta">
        {person.email && <a href={`mailto:${person.email}`}>Email</a>}
        {person.link && <a href={person.link} target="_blank" rel="noreferrer">Learn more</a>}
      </div>
    )}
  </div>
</article>

<style>
  .profile {
    display: grid;
    gap: var(--space-md);
    padding: var(--space-xl);
    background: #ffffff;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-card);
  }

  .profile__image {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    overflow: hidden;
  }

  .profile__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .profile__body {
    display: grid;
    gap: var(--space-xs);
  }

  h3 {
    margin: 0;
    font-size: 20px;
    color: var(--color-text);
  }

  p {
    margin: 0;
    color: var(--color-body);
  }

  .profile__meta {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .profile__meta a {
    font-weight: 600;
    font-size: 14px;
  }

  @media (max-width: 640px) {
    .profile {
      padding: var(--space-lg);
      text-align: center;
      justify-items: center;
    }

    .profile__body {
      justify-items: center;
    }
  }
</style>
