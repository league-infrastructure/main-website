---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CardBaseStyles from '../components/CardBaseStyles.astro';
import HeroLayoutStyles from '../components/HeroLayoutStyles.astro';
import '../styles/global.css';
import '../styles/site.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'The League of Amazing Programmers', description } = Astro.props as Props;
const pageTitle = title === 'The League of Amazing Programmers' ? title : `${title} | The League of Amazing Programmers`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    {description && <meta name="description" content={description} />}
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  </head>
  <body>
    <CardBaseStyles />
    <HeroLayoutStyles />
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
